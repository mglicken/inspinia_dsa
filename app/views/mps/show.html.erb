<!-- Responsive panel-->
<br>
<div class="row">
  <div class="pull-right">
    <div class="btn btn-group btn-group-vertical">
      <a class="btn btn-primary" href="/copy_mp_layout/<%= @mp.id %>">Copy MP Layout</a>
    </div>
  </div> 
<div class="row">
  <div class="col-lg-offset-2 col-lg-7">
    <div class="panel panel-default">
      <div class="panel-heading">
        <% if MpSlide.where(mp_id: @mp.id).empty? %>
          <a href="#" class="btn btn-lincoln pull-right" text-align="center" id="upload_widget_opener">Upload MP PDF</a>
        <% end %> 
        <h3 class="panel-title" style="font-size:28px"><%= @mp.name %></h3>

      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-lg-12">
            <dl class="dl-horizontal" style="font-size:10px">

             <dt>Deal</dt>
             <dd> <a href="/deals/<%= @mp.deal_id %>"><%= @mp.deal.name %></a></dd>
             <dt>Company</dt>
             <dd> <a href="/companies/<%= @mp.deal.company.id %>"><%= @mp.deal.company.name %></a></dd>
             <dt>Date</dt>
             <dd><%= @mp.mp_date %></dd>

            </dl>
            <div class="btn-group btn-group-justified">
              <a href="/mps" class="btn btn-lincoln">
                <i class="fa fa-reply"></i>
              </a>

              <%= render('shared/edit_mp_modal', :mp => @mp)%>

              </a>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>


<%= render('view_slides') %>

<%= render('shared/quick_search_js') %>

<% if MpSlide.where(mp_id: @mp.id).empty? %>
  <%= render('shared/upload_widget',url: "/create_mp_slide/#{@mp.id}", p_id: @p_id) %>
<% end %>

<!-- End responsive panel -->
