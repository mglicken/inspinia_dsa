<!-- Responsive panel-->
<br>
<div class="row">
  <div class="col-lg-offset-2 col-lg-7">
    <div class="panel panel-default">
      <div class="panel-heading">
        <% if @market_study.slides.empty? %>
          <a href="#" class="btn btn-lincoln pull-right" text-align="center" id="upload_widget_opener">Upload Market Study PDF</a>
        <% end %> 
        <h3 class="panel-title" style="font-size:28px"><%= @market_study.name %></h3>

      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-lg-12">
            <dl class="dl-horizontal" style="font-size:10px">

             <dt>Deal</dt>
             <dd> <a href="/deals/<%= @market_study.deal_id %>"><%= @market_study.deal.name %></a></dd>
             <dt>Company</dt>
             <dd> <a href="/companies/<%= @market_study.deal.company.id %>"><%= @market_study.deal.company.name %></a></dd>
             <dt>Date</dt>
             <dd><%= @market_study.market_study_date %></dd>
             <dt>Tags</dt>
             <dd>
             <% @tags.each do |tag| %>
              <%= tag.name %>,
            <% end %>
             </dd>
            </dl>
            <div class="btn-group btn-group-justified">

              <%= render('shared/edit_market_study_modal', :market_study => @market_study)%>

            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>


<%= render('view_slides') %>

<%= render('shared/quick_search_js') %>

<% if @market_study.image_id.nil? %>
  <%= render('shared/upload_widget',url: "/create_market_study_slide/#{@market_study.id}", p_id: @p_id) %>
<% elsif @market_study.image_id. == "" %>
  <%= render('shared/upload_widget',url: "/create_market_study_slide/#{@market_study.id}", p_id: @p_id) %>
<% end %>

<!-- End responsive panel -->
