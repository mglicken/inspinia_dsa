<!-- Validation failure messages -->

<% if @deal_person.errors.any? %>
  <% @deal_person.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Add Deal Person</h3>
      </div>
      <div class="panel-body">
        <form action="/create_deal_person" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">


          <!-- Label and input for Deal -->
          <div class="form-group">
            <h5><label for="deal_id" class="col-sm-2 control-label">
              Deal
            </label></h5>
            <div class="col-sm-10">
              <%= select_tag :deal_id, options_from_collection_for_select(Deal.all.order("name ASC"), :id, :name, @deal_person.deal_id), :class => "form-control" %>
            </div>
          </div>

          <!-- Label and input for Company -->
          <div class="form-group">
            <h5><label for="person_id" class="col-sm-2 control-label">
              Person
            </label></h5>
            <div class="col-sm-10">
              <%= select_tag :person_id, options_from_collection_for_select(Person.all.order("name ASC"), :id, :name, @deal_person.person_id), :class => "form-control" %>
            </div>
          </div>


          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-success">
                Create Deal Person
              </button>
              or
              <a href="/slide_tags">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
