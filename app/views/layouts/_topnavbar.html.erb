<div class="row border-bottom">
    <nav class="navbar navbar-fixed-top white-bg" role="navigation" style="margin-bottom: 0; height: 30px;">
        <div class="navbar-header">
            <form role="search" class="navbar-form-custom" method="post" action="/search/">
              <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">
                <div class="form-group">
                    <input type="string" placeholder="Type to search..." class="form-control" name="search" id="search"/>
                </div>
            </form>
        </div>
        <ul class="nav navbar-top-links navbar-right">
            <% if current_user.present? %>
                <li>
                    <span class="m-r-sm text-muted welcome-message" data-i18n="topnav.welcometext"><a href="/dashboard/">Welcome, <%= current_user.person.name %></a></span>
                </li>
            <% end %>
            <%if current_user.present? %>
                <li>
                    <a href="/users/sign_out" data-method="delete" rel="nofollow">
                    <i class="fa fa-sign-out"></i> Sign Out
                </a>
                </li>
                <% if current_user.access_id <= 2 %>
                    <li>
                        <a href="/user/new">
                            <i class="fa fa-user-plus"></i>Create
                        </a>
                    </li>
                <% end %>
            <% else %>
                 <li>
                    <a href="/users/sign_in">
                    <i class="fa fa-sign-in"></i> Sign In
                </a>
                </li>
            <% end %>
    </ul>
</nav>
</div>