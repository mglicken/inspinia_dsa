<!-- Validation failure messages -->

<% if @nda.errors.any? %>
  <% @nda.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
  
      <div class="panel-heading">
        <h3 class="panel-title">Edit <%= @nda.deal.name %> NDA</h3>
      </div>
      <div class="panel-body">
        <form action="/update_nda/<%= @nda.id %>" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for name -->
          <div class="form-group">
            <h5><label for="name" class="col-sm-2 control-label">
              NDA Dcoument Title
            </label></h5>
            <div class="col-sm-10">
              <input type="string" id="name" name="name" placeholder="e.g., Company Name / Acquirer Name NDA" class="form-control" value="<%= @nda.name %>">
            </div>
          </div>

          <!-- Label and input for Company Name -->
          <div class="form-group">
            <label for="name" class="col-sm-2 control-label">
              Deal
            </label>
            <div class="col-sm-10">
              <%= select_tag :deal_id, options_from_collection_for_select(Deal.all, :id, :name, @nda.deal_id), :class => "form-control" %>
            </div>
          </div>
          <!-- Label and input for NDA Date -->
          <div class="form-group">
            <label for="nda_date" class="col-sm-2 control-label">
              NDA Date
            </label>
            <div class="col-sm-10">
              <input type="date" id="nda_date" name="nda_date" placeholder="e.g., 09/09/2017" class="form-control" value="<%= @nda.nda_date %>">
            </div>
          </div>
          <!-- Label and input for Image ID -->
          <div class="form-group">
            <label for="image_id" class="col-sm-2 control-label">
              Image ID
            </label>
            <div class="col-sm-10">
              <input type="string" id="image_id" name="image_id" placeholder="alkdjsagflj231564651658134e8" class="form-control" value="<%= @nda.image_id %>">
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-warning">
                Update NDA
              </button>
              or
              <a href="/ndas/<%= @nda.id %>">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>


<!-- End responsive panel example -->
