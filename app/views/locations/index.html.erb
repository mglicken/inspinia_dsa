<div class="page-header">
  <h1>
    Locations
    <%= render('shared/create_location_modal') %>
  </h1>
</div>

<!-- Responsive, Isotope-based layout example -->

<div class="row">
  <div class="col-xs-12">
    <input type="text" id="quicksearch" placeholder="Search Locations (start typing)" class="form-control">
  </div>
</div>

<hr>

<div class="row isotope-container">
<% @locations.order("name ASC").each do |location| %>
  <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3 isotope-item">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><%= location.name %></h3>
      </div>
      <div class="panel-body">
        <dl>

              <dt>Address:</dt>
              <dd <address>

                  <%= location.address %><br>
                  <%= location.city %>, <%= location.state %> <%= location.zip %><br>
                <% if location.phone.present? %> 
                      <abbr title="phone">Main:</abbr> (<%= location.phone.to_s[0..2] %>) <%= location.phone.to_s[3..5] %>-<%= location.phone.to_s[6..9] %><br>
                  <%end%>

                  <% if location.web_address.present? %> 
                    <abbr title="web_address">Other:</abbr> <a href="http://<%= location.web_address %>" target="_blank"><%= location.web_address %></a>
                  <%end%>                  
                 
                  </address>                                  
              </dd>



        </dl>
        <div class="btn-group btn-group-justified">
          <a href="/locations/<%= location.id %>" class="btn btn-lincoln">
            <i class="fa fa-search-plus"></i>
          </a>

          <%= render('shared/edit_location_modal', :location => location)%>
        </div>
      </div>
    </div>
  </div>
<% end %>
</div>

<%= render('shared/quick_search_js') %>