
<br>
<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <% if @fund.open %>
    <div class="ibox-content">
        <h3 class="ibox-title bg-success" style="font-size:12px"><%= @fund.name %> (Open)</h3>
    <%else%>
      <div class="ibox-content">
          <h3 class="ibox-title" style="font-size:12px"><%= @fund.name %> (Closed)</h3>
    <%end%>
      <div class="ibox-body">
            <dl class="dl-horizontal">
              <br>
              <dt>Sponsor</dt>
              <dd><a href="/sponsors/<%=@fund.sponsor_id%>"><%= @fund.sponsor.name %></a></dd>
              <dt>Size</dt>
              <dd>$<%= @fund.size %> million</dd>
              <dt>Link to Details</dt>
              <dd>
                <% if @fund.link.present? %> 
                  <a href="http://<%= @fund.link %>" target="_blank"><%= @fund.link %></a>
                <%end%>                  
              </dd>
            </dl>
            <div class="btn-group btn-group-justified">
              <a href="/funds" class="btn btn-lincoln">
                <i class="fa fa-chevron-left"></i>
              </a>

              <%= render('shared/edit_fund_modal', :fund => @fund)%>
              <% if current_user.access_id < 3 %>
                <%= render('shared/delete_fund_modal', :fund => @fund)%>
              <% end %>
            </div>
    </div>
    </div>
  </div>
</div>
<br>

<%= render('view_companies') %>

<%= render('shared/quick_search_js') %>

