<%= render('shared/file_download_upload', path: "nbps") %>
<div class="page-header">
  <h1>
    NBPs
  </h1>
</div>

<!-- Responsive, Isotope-based layout example -->

<div class="row">
  <div class="col-xs-12">
    <input type="text" id="quicksearch" placeholder="Search NBPs (start typing)" class="form-control">
  </div>
</div>

<hr>

<div class="row isotope-container">
<% @nbps.order("nbp_date DESC").each do |nbp| %>
  <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3 isotope-item">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><a href="/nbps/<%= nbp.id %>">
            <%= nbp.name %></a></h3>
      </div>
      <% if nbp.nbp_date.nil? | nbp.nbp_date == "" %>      
      <div class="panel-body">
        <dl>
          <dt></dt>
          <dd><%= nbp.nbp_date %></dd>
        </dl>
      </div>
      <% end %>
    </div>
  </div>
<% end %>
</div>

<%= render('shared/quick_search_js') %>