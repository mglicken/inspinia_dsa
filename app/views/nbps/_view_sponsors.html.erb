<div class="page-header">
  <h1>
    Financial Acquirers
  </h1>
</div>

<div class="row">
  <div class="col-xs-12">
    <input type="text" id="quicksearch" placeholder="Search Sponsors (start typing)" class="form-control">
  </div>
</div>

<br>

<div class="row isotope-container">
<% @sponsors.order("name ASC").each do |sponsor| %>
  <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4 isotope-item">
    <%if sponsor.nbp_sponsors.find_by(nbp_id: @nbp.id).featured %>
      <div class="panel panel-success">
    <%else%>
      <div class="panel panel-default">
    <%end%>
      <div class="panel-heading">
        <h3 class="panel-title"><a href="/sponsors/<%= sponsor.id %>"><%= sponsor.name %></a></h3>

      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">

              <strong>Funds: </strong><br>
              <% sponsor.funds.where(close_year: nil).each do |fund|%>                            
                <%if fund.size >= 1000 %>
                <%= fund.name%> - $<%= fund.size/1000 %> billion (<%= fund.open_year %>)<br>
                <%else%>
                <%= fund.name%> - $<%= fund.size %> million (<%= fund.open_year %>)<br>
                <%end%>
              <%end%>

              <strong>Companies: </strong><br>
              <% sponsor.companies.each do |company|%>                            
                <a href="/companies/<%=company.id%>"><%= company.name%></a><br>
              <%end%>
              
              <div class="pull-right">
                <%= render('shared/edit_nbp_sponsor_modal', nbp_sponsor: NbpSponsor.where(sponsor_id: sponsor.id, nbp_id: @nbp.id).first) %>
              </div>

          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
</div>