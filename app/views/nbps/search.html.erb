<div class="page-header">
  <h1>
    NBPs
    <%= render('shared/create_nbp_modal') %>
  </h1>
</div>

<!-- Responsive, Isotope-based layout example -->

<div class="row">
  <div class="col-xs-12">
    <input type="text" id="quicksearch" placeholder="Search NBPs (start typing)" class="form-control">
  </div>
</div>

<hr>

<div class="row isotope-container">
<% @nbps.order("nbp_date DESC").each do |nbp| %>
  <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4 isotope-item">
    <div class="panel panel-default">
      <div class="panel-heading" >
        <h3 class="panel-title" style="font-size:12px"><%= nbp.name %></h3>
      </div>
      <div class="panel-body" >
        <div class="row">

          <div class="col-md-12">
            <dl class="dl-horizontal" style="font-size:10px" >

              <dt>Deal</dt>
              <dd><a href="/deals/<%=nbp.deal.id %>"><%= nbp.deal.name %></a></dd>
              <dt>NBP</dt>
              <dd> <a href="/nbps/<%=nbp.id %>"><%= nbp.nbp_date %></a></dd>


            </dl>
            <div class="btn-group btn-group-justified">
              <a href="/nbps/<%= nbp.id %>" class="btn btn-lincoln">
                <i class="fa fa-search-plus"></i>
              </a>

              <%= render('shared/edit_nbp_modal', :nbp => nbp)%>

              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
</div>

<%= render('shared/quick_search_js') %>
