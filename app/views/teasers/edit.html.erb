<!-- Validation failure messages -->

<% if @teaser.errors.any? %>
  <% @teaser.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
  
      <div class="panel-heading">
        <h3 class="panel-title">Edit <%= @teaser.deal.name %> Teaser</h3>
      </div>
      <div class="panel-body">
        <form action="/update_teaser/<%= @teaser.id %>" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for Company Name -->
          <div class="form-group">
            <label for="name" class="col-sm-2 control-label">
              Deal
            </label>
            <div class="col-sm-10">
              <%= select_tag :deal_id, options_from_collection_for_select(Deal.all, :id, :name, @teaser.deal_id), :class => "form-control" %>
            </div>
          </div>
          <!-- Label and input for Teaser Date -->
          <div class="form-group">
            <label for="teaser_date" class="col-sm-2 control-label">
              Teaser Date
            </label>
            <div class="col-sm-10">
              <input type="date" id="teaser_date" name="teaser_date" placeholder="e.g., 09/09/2017" class="form-control" value="<%= @teaser.teaser_date %>">
            </div>
          </div>
          <!-- Label and input for ppt_address -->
          <div class="form-group">
            <h5><label for="ppt_address" class="col-sm-2 control-label">
              Powerpoint Folder Address
            </label></h5>
            <div class="col-sm-10">
              <input type="string" id="ppt_address" name="ppt_address" placeholder="H://Marketing/Sponsor/Deal/NBP/Powerpoint/XML" class="form-control">
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-warning">
                Update Teaser
              </button>
              or
              <a href="/teasers/<%= @teaser.id %>">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>


<!-- End responsive panel example -->
