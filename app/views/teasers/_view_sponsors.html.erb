<div class="page-header">
  <h1>
    Financial Acquirers (<%= @sponsors.count%>)
  </h1>
</div>

<div class="row">
  <div class="col-lg-12">
    <input type="text" id="quicksearch" placeholder="Search Sponsors (start typing)" class="form-control">
  </div>
</div>

<br>

<div class="row isotope-container">
<% @sponsors.each do |sponsor| %>
  <div class="col-lg-4 isotope-item">
       <div class="panel panel-success">
          <div class="panel-heading">
        <h3 class="panel-title"><a href="/sponsors/<%= sponsor.id %>"><%= sponsor.name %> (<%= sponsor.sponsor_type %>)</a></h3>

      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">

              <strong>Funds: </strong><br>
              <% sponsor.funds.where(close_year: nil).each do |fund|%>                            
                <% if fund.size.present? %>
                  <%if fund.size > 1000 %>
                  <%= fund.name%> - $<%= fund.size/1000 %> billion (<%= fund.open_year %>)<br>
                  <%else fund.size%>
                  <%= fund.name%> - $<%= fund.size %> million (<%= fund.open_year %>)<br>
                  <%end%>
                <%end%>
              <%end%>

              <strong>Companies: </strong><br>
              <% sponsor.companies.each do |company|%>                            
                <a href="/companies/<%=company.id%>"><%= company.name%></a><br>
              <%end%>
              
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
</div>