<div class="page-header">
  <h1>
    Strategic Acquirers (<%= @companies.count%>)
  </h1>
</div>

<div class="row">
  <div class="col-lg-12">
    <input type="text" id="quicksearch" placeholder="Search Companies (start typing)" class="form-control">
  </div>
</div>

<br>

  <div class="row container">
        <% @companies.each do |company| %>
          <div class="col-lg-4 isotope-item" id="<%=company.id%>">
              <div class="panel panel-primary">
              <div class="panel-heading" style="padding-top:5px; padding-bottom:10px;">
                <div class="pull-right">
                    <%= link_to content_tag(:i,nil,class: 'fa fa-times'), "/delete_teaser_company/#{ @teaser_companies.find_by(company_id: company.id, teaser_id: @teaser.id).id }", :class => "btn btn-xs", :style=> "padding-top:0px; color:white;", :remote => true  %>

                </div>
                <strong ><a style="color:white" href="/companies/<%= company.id %>"><%= company.name %></a></strong>
              </div>
              <div class="panel-body" style="padding-top:5px; padding-bottom:5px;">



  <table class="table">
    <thead>
    <tr>
        <th></th>
        <th>Declined</th>
        <th>Negotiating</th>
        <th>Complete</th>

    </tr>
    </thead>
    <tbody>
    <tr>
      <td style="text-align: left">
        <strong> NDA:</strong>
      </td>

      <td style="text-align: center">
      <% if @teaser.teaser_companies.find_by(company_id: company.id).nda.status == 1 %>
        <%= link_to content_tag(:i,nil, class: 'fa fa-times'), "/update_nda/#{@teaser.teaser_companies.find_by(company_id: company.id).nda_id}/1", :id => "company_#{company.id}_1", :class => "strip-tags-selected", :remote => true  %>
      <% else %>
        <%= link_to content_tag(:i,nil, class: 'fa fa-times'), "/update_nda/#{@teaser.teaser_companies.find_by(company_id: company.id).nda_id}/1", :id => "company_#{company.id}_1", :class => "strip-tags-notselected", :remote => true  %>
      <% end %>
      </td>

      <td style="text-align: center">
      <% if @teaser.teaser_companies.find_by(company_id: company.id).nda.status == 2 %>
        <%= link_to content_tag(:i,nil, class: 'fa fa-times'), "/update_nda/#{@teaser.teaser_companies.find_by(company_id: company.id).nda_id}/1", :id => "company_#{company.id}_1", :class => "strip-tags-selected", :remote => true  %>
      <% else %>
        <%= link_to content_tag(:i,nil, class: 'fa fa-times'), "/update_nda/#{@teaser.teaser_companies.find_by(company_id: company.id).nda_id}/1", :id => "company_#{company.id}_1", :class => "strip-tags-notselected", :remote => true  %>
      <% end %>
      </td>

      <td style="text-align: center">
      <% if @teaser.teaser_companies.find_by(company_id: company.id).nda.status == 3 %>
        <%= link_to content_tag(:i,nil, class: 'fa fa-times'), "/update_nda/#{@teaser.teaser_companies.find_by(company_id: company.id).nda_id}/1", :id => "company_#{company.id}_1", :class => "strip-tags-selected", :remote => true  %>
      <% else %>
        <%= link_to content_tag(:i,nil, class: 'fa fa-times'), "/update_nda/#{@teaser.teaser_companies.find_by(company_id: company.id).nda_id}/1", :id => "company_#{company.id}_1", :class => "strip-tags-notselected", :remote => true  %>
      <% end %>
      </td>
    </tr>
    <tbody>
  </table>

              </div>
            </div>
          </div>
        <% end %>

  </div>

