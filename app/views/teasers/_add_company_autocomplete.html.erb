<div class="ui-widget">
  <form action="/create_teaser_company/" method="post" class="form-inline">

    <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

    <select name="company_id" data-placeholder="Add Companies..." class="select2 form-control form-inline"  tabindex="2" style="width:75%">
        <% Company.where(id: (Company.ids - TeaserCompany.where(teaser_id: @teaser.id).pluck(:company_id)).uniq).order("name asc").each do |company| %>
        <option value="<%=company.id %>"><%=company.name %></option>
        <% end %>
      </select>
    <input name="teaser_id" type="hidden" value="<%= teaser.id%>">
    <button class="btn btn-success btn-xs form-inline">
      Enter
    </button>

  </form>
</div>

<script type="text/javascript">
  $(function() { 
      $('.select2').select2();
  });
</script>