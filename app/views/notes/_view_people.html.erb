<div class="row">
    <div class="col-lg-12">
        <div class="ibox collapsed">
            <div class="ibox-title">
                <h5> People (<%= @people.count%>) <%= render('shared/add_person_to_note_modal')%></h5>
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                    <a class="close-link">
                        <i class="fa fa-times"></i>
                    </a>
                </div>
            </div>
            <div class="ibox-content">
              <div class="wrapper wrapper-content">
                  <div class="row">
                      <% @people.each do |person| %>
                        <div class="col-lg-1">
                          <div class="ibox">
                              <div class="product-box">

                                    <a href="/people/<%= person.id %>">
                                      <!-- Make Height 225px if want to look right, need to make it clip -->
                                      <img src="<%= person.image_url %>" width = 100%>
                                    
                                    </a>
                                  <div class="product-desc">
                                      <strong><%=person.name %></strong>
                                      <small class="text-muted"><%=person.role.name %></small><br>
                                  </div>
                              </div>
                          </div>
                        </div>
                      <% end %>
                  </div>
              </div>
            </div>
        </div>
    </div>
</div>