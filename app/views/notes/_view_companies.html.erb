<div class="ibox collapsed float-e-margins">
    <div class="ibox-title">
        <h5>Companies (<%= @companies.count %>) <%= render('shared/add_company_to_note_modal')%></h5>
        <div class="ibox-tools">
            <a class="collapse-link">
                <i class="fa fa-chevron-up"></i>
            </a>
            <a class="close-link">
                <i class="fa fa-times"></i>
            </a>
        </div>
    </div>
    <div class="ibox-content">

        <div class="row">
            <div class="col-lg-12">
                <table class="table table-hover margin bottom">
                    <thead>
                    <tr>
                        <th>Company</th>
                        <th style="width: 20%;" class="text-center">Location</th>
                        <th style="width: 12%;" class="text-center">Phone</th>
                        <th style="width: 20%;">Web</th>
                        <th style="width: 5%;"></th>
                    </tr>
                    </thead>
                    <tbody>

                            <% @companies.each do |company| %>
                    <tr>
                        <td><a href="/companies/<%= company.id %>"><%= company.name %></a></td>
                        <td class="text-center">
                            <% if company.state.present? %>
                                <%= company.city %>, <%= company.state %>
                            <% end %>      
                        </td>
                        <td class="text-center">
                        <% if company.phone.present? %>
                            (<%= company.phone.to_s[0..2] %>) <%= company.phone.to_s[3..5] %>-<%= company.phone.to_s[6..9]%>
                        <% end %>
                        </td>
                        <td>
                            <% if company.web_address.present? %>
                                <%if company.web_address[0..4] == "https" %>
                                 <a href="<%= company.web_address %>" target="_blank"><%= company.web_address[8..(company.web_address.length-1)] %></a>
                                <% elsif company.web_address[0..3] == "http" %>
                                  <a href="<%= company.web_address %>" target="_blank"><%= company.web_address[7..(company.web_address.length-1)] %></a>
                                <%else%>
                                  <a href="<%= company.web_address %>" target="_blank"><%= company.web_address %></a>
                                <%end%>
                            <%end%>
                        </td>
                        <td>
                            <a href="<%= company.linkedin_url%>" class="btn btn-xs" target="_blank"><i class="fa fa-linkedin"></i></a>
                        </td>
                    </tr>
                    <%end%>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>