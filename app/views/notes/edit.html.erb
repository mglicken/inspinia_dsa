<!-- Validation failure messages -->

<% if @note.errors.any? %>
  <% @note.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
  
      <div class="panel-heading">
        <h3 class="panel-title">Edit Note</h3>
      </div>
      <div class="panel-body">
        <form action="/update_note/<%= @note.id %>" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for Title -->
          <div class="form-group">
            <label for="title" class="col-sm-2 control-label">
              Title
            </label>
            <div class="col-sm-10">
              <input type="string" id="title" name="title" placeholder="" class="form-control" value="<%= @note.title %>">
            </div>

          <!-- Label and input for Detail -->
          <div class="form-group">
            <h5><label for="detail" class="col-sm-2 control-label">
              Information:
            </label></h5>
            <div class="col-sm-10">
              <textarea id="detail" name="detail" placeholder="e.g., Met with person at company on xx/xx/xxxx..."  class="form-control" rows="5"><%= @note.detail %></textarea>
            </div>
          </div>

          <!-- Label and input for Date -->
          <div class="form-group">
            <label for="date" class="col-sm-2 control-label">
              Date
            </label>
            <div class="col-sm-10">
              <input type="date" id="date" name="date" placeholder="" class="form-control" value="<%= @note.date %>">
            </div>
       
          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-edit">
                Update Note
              </button>
              or
              <a href="/notes/<%= @note.id %>">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>


<!-- End responsive panel example -->
