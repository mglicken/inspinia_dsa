<!-- Validation failure messages -->

<% if @ioi.errors.any? %>
  <% @ioi.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Add IOI</h3>
      </div>
      <div class="panel-body">
        <form action="/create_ioi" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

         <!-- Label and input for name -->
          <div class="form-group">
            <h5><label for="name" class="col-sm-2 control-label">
              IOI Dcoument Title
            </label></h5>
            <div class="col-sm-10">
              <input type="string" id="name" name="name" placeholder="e.g., Company Name / Acquirer Name IOI" class="form-control" value="<%= @ioi.name %>">
            </div>
          </div>

          <!-- Label and input for Company Name -->
          <div class="form-group">
            <label for="name" class="col-sm-2 control-label">
              Deal
            </label>
            <div class="col-sm-10">
              <%= select_tag :deal_id, options_from_collection_for_select(Deal.all, :id, :name, @ioi.deal_id), :class => "form-control" %>
            </div>
          </div>
          <!-- Label and input for IOI Date -->
          <div class="form-group">
            <label for="ioi_date" class="col-sm-2 control-label">
              IOI Date
            </label>
            <div class="col-sm-10">
              <input type="date" id="ioi_date" name="ioi_date" placeholder="e.g., 09/09/2017" class="form-control" value="<%= @ioi.ioi_date %>">
            </div>
          </div>
          <!-- Label and input for Image ID -->
          <div class="form-group">
            <label for="image_id" class="col-sm-2 control-label">
              Image ID
            </label>
            <div class="col-sm-10">
              <input type="string" id="image_id" name="image_id" placeholder="alkdjsagflj231564651658134e8" class="form-control" value="<%= @ioi.image_id %>">
            </div>
          </div>
          <!-- Label and input for Low Purchase Price ($ millions) -->
          <div class="form-group">
            <label for="low_purchase_price" class="col-sm-2 control-label">
              Low Purchase Price ($ millions)
            </label>
            <div class="col-sm-10">
              <input type="string" id="low_purchase_price" name="low_purchase_price" placeholder="10.1" class="form-control" value="<%= @ioi.low_purchase_price %>">
            </div>
          </div>
          <!-- Label and input for High Purchase Price ($ millions) -->
          <div class="form-group">
            <label for="high_purchase_price" class="col-sm-2 control-label">
              High Purchase Price ($ millions)
            </label>
            <div class="col-sm-10">
              <input type="string" id="high_purchase_price" name="high_purchase_price" placeholder="10.1" class="form-control" value="<%= @ioi.high_purchase_price %>">
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-success">
                Create IOI
              </button>
              or
              <a href="/iois">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
