<div class="row">
  <div class="col-lg-offset-2 col-lg-7">
    <div class="panel panel-default">
      <div class="panel-heading">
        <% if IoiSlide.where(ioi_id: @ioi.id).empty? %>
          <a href="#" class="btn btn-lincoln pull-right" text-align="center" id="upload_widget_opener">Upload IOI PDF</a>
        <% end %> 
        <h3 class="panel-title" style="font-size:28px"><%= @ioi.name %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-lg-12">
            <dl class="dl-horizontal" style="font-size:10px">

             <dt>Deal</dt>
             <dd> <a href="/deals/<%= @ioi.deal_id %>"><%= @ioi.deal.name %></a></dd>
             <dt>Company</dt>
             <dd> <a href="/companies/<%= @ioi.deal.company.id %>"><%= @ioi.deal.company.name %></a></dd>
             <dt>Date</dt>
             <dd><%= @ioi.ioi_date %></dd>

            </dl>
            <div class="btn-group btn-group-justified">
              <%= render('shared/edit_ioi_modal', :cip => @ioi)%>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>

<%= render('view_slides') %>

<%= render('shared/quick_search_js') %>

<% if IoiSlide.where(ioi_id: @ioi.id).empty? %>
  <%= render('shared/upload_widget',url: "/create_ioi_slide/#{@ioi.id}", p_id: @p_id) %>
<% end %>

