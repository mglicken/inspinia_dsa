<a class=" btn btn-lincoln" data-toggle="modal" href="#myModalCreateEngagementSponsor">Add Sponsor that Engaged Deal</i></a>

<div class="modal inmodal fade" id="myModalCreateEngagementSponsor" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
          <form enctype="multipart/form-data" action="/create_engagement_sponsor/" method="post" class="form-horizontal">
            <div class="modal-header">
                <h4 class="modal-title">Add Sponsor that Engaged Deal</h4>
                <small class="font-bold">Add a new Sponsor to the deal. (This is the (a) Sponsor that engaged the process)</small>
            </div>
            <div class="modal-body">

          <!-- Validation failure messages -->

          <% if @engagement_sponsor.blank?%>
            <% @engagement_sponsor = EngagementSponsor.new %>
          <% end %>
          <% if @engagement_sponsor.errors.any? %>
            <% @engagement_sponsor.errors.full_messages.each do |message| %>
              <div class="alert alert-dismissable alert-danger">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                <%= message %>
              </div>
            <% end %>
          <% end %>

          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

            <%if sponsor.blank? %>
              <div class="form-group">
                <h5><label for="sponsor_id" class="col-lg-2 control-label">
                  Sponsor
                </label></h5>
                <select name="sponsor_id" data-placeholder="Select Sponsor..." class="select2 form-control form-inline"  tabindex="2" style="width:80%">
                  <% Sponsor.order("name asc").each do |sponsor| %>
                  <option value="<%=sponsor.id %>"><%=sponsor.name %></option>
                  <% end %>
                </select>
              </div>
            <%else%>
              <input name="sponsor_id" type="hidden" value="<%= sponsor.id %>">
            <% end %>
 
            <!-- Label and input for Deal -->
            <%if deal.blank? %>
              <div class="form-group">
                <h5><label for="deal_id" class="col-lg-2 control-label">
                  Deal
                </label></h5>
                <select name="deal_id" data-placeholder="Select Deal..." class="select2 form-control form-inline"  tabindex="2" style="width:80%">
                  <% Deal.order("name asc").each do |deal| %>
                  <option value="<%=deal.id %>"><%=deal.name %></option>
                  <% end %>
                </select>
              </div>
            <%else%>
              <input name="deal_id" type="hidden" value="<%= deal.id %>">
            <% end %>


            </div>
            <div class="modal-footer">

                <div class="form-group">
                    <button class="btn btn-lincoln">
                      Add Sponsor to Deal
                    </button>
                    <button type="button" class="btn btn-white" data-dismiss="modal">Close</button>
                </div>

            </div>
        </div>
      </form>
    </div>
</div>


