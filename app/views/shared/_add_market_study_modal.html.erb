
<!-- Button trigger modal -->
<div class="btn btn-md btn-lincoln" data-toggle="modal" data-target="#myModalMarketStudy_<%= deal.id %>">
  Add Market Study
</div>

<!-- Modal -->
<div class="modal fade" id="myModalMarketStudy_<%= deal.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title" id="myModalLabel"><%= deal.name%></h4>
      </div>
      <div class="modal-body">



        <form enctype="multipart/form-data" action="/create_diligence_advisor/" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

            <input name="deal_id" type="hidden" value="<%= deal.id %>">

          <!-- Label and input for name -->
          <div class="form-group">
            <h5><label for="name" class="col-sm-2 control-label">
              Name
            </label></h5>
            <div class="col-lg-10">
              <input type="string" id="name" name="name" placeholder="e.g., Packaging Market Study" class="form-control">
            </div>
          </div>

          <!-- Label and input for Date -->
          <div class="form-group">
            <h5><label for="market_study_date" class="col-sm-2 control-label">
              Date
            </label></h5>
            <div class="col-lg-10">
              <input type="date" id="market_study_date" name="market_study_date" placeholder="12/17/2017" class="form-control">
            </div>
          </div>


          <div class="form-group pull-left">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-lincoln">
                Add Market Study
              </button>
            </div>
          </div>
          <br>
        </form>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
