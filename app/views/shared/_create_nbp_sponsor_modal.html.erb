
<!-- Button trigger modal -->
<div class="btn btn-success" data-toggle="modal" data-target="#myModalCreateNBPSponsor">
  Add Sponsor
</div>

<!-- Modal -->
<div class="modal fade" id="myModalCreateNBPSponsor" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
         <h4 class="modal-title" id="myModalLabel">Add Financial Acquirer</h4>
      </div>
      <div class="modal-body">



<!-- Validation failure messages -->

<% if @nbp_sponsor.blank?%>
  <% @nbp_sponsor = Bucket.new %>
<% end %>
<% if @nbp_sponsor.errors.any? %>
  <% @nbp_sponsor.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-0 col-sm-12 col-md-offset-0 col-md-12">
    <div class="panel panel-default">
      <div class="panel-body">

        <form enctype="multipart/form-data" action="/create_nbp_sponsor" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Check boxes Featured -->
          <div class="checkbox-inline">
            <h5><label><input type="checkbox" name="featured">Featured</label></h5>
          </div>          

          <div class="form-group">
            <h5><label for="sponsor_id" class="col-sm-2 control-label">
              Sponsor
            </label></h5>
            <div class="col-sm-10">
              <%= select_tag :sponsor_id, options_from_collection_for_select(Sponsor.where(id: Sponsor.ids - NbpSponsor.where(nbp_id: nbp.id).pluck(:sponsor_id)).order("name ASC"), :id, :name), :class => "form-control" %>
            </div>
          </div>

          <input name="nbp_id" type="hidden" value="<%= nbp.id%>">

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-lincoln">
                Add Financial Acquirer
              </button>
            </div>
          </div>

        </form>

      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->


      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
