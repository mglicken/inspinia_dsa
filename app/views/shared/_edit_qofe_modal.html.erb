
<!-- Button trigger modal -->
<div class="btn btn-edit" data-toggle="modal" data-target="#myModalEditQofE_<%=qofe.id %>">
  <i class="fa fa-edit"></i>
</div>

<div class="modal inmodal fade" id="myModalEditQofE_<%=qofe.id %>" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
          <form enctype="multipart/form-data" action="/update_qofe/<%= qofe.id %>" method="post" class="form-horizontal">
            <div class="modal-header" >
                <h4 class="modal-title">Edit QofE</h4>
                <small class="font-bold">Update <%= qofe.name %> details.</small>
            </div>
            <div class="modal-body">

          <% if qofe.errors.any? %>
            <% qofe.errors.full_messages.each do |message| %>
              <div class="alert alert-dismissable alert-danger">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                <%= message %>
              </div>
            <% end %>
          <% end %>

          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">


          <!-- Label and input for QofE Name -->
          <div class="form-group">
            <label for="name" class="col-sm-2 control-label">
              QofE Name
            </label>
            <div class="col-sm-10">
              <input type="string" id="name" name="name" placeholder="e.g., e.g., Sponsor Name / Company Name (Year) CS" class="form-control" value="<%= qofe.name %>">
            </div>
          </div>

          <input type="hidden" name="deal_id"  value="<%= qofe.deal_id %>">

          <input type="hidden" name="image_id"  value="<%= qofe.image_id %>">

          <!-- Label and input for Date -->
          <div class="form-group">
            <h5><label for="qofe_date" class="col-sm-2 control-label">
              Date
            </label></h5>
            <div class="col-lg-10">
              <input type="date" id="qofe_date" name="qofe_date" placeholder="12/17/2017" class="form-control" value="<%= qofe.qofe_date %>"
            </div>
          </div>

            </div>
            <div class="modal-footer">

                <div class="form-group">
                    <button class="btn btn-lincoln">
                      Update QofE
                    </button>
                    <button type="button" class="btn btn-white" data-dismiss="modal">Close</button>
                </div>

            </div>
        </div>
      </form>
    </div>
</div>