
<!-- Button trigger modal -->
<div class="btn btn-edit" data-toggle="modal" data-target="#myModalEditNBPSponsor_<%=nbp_sponsor.id %>">
  <i class="fa fa-edit"></i>
</div>

<!-- Modal -->
<div class="modal fade" id="myModalEditNBPSponsor_<%= nbp_sponsor.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel"> Edit <%= nbp_sponsor.sponsor.name %> Content</h4>
      </div>
      <div class="modal-body">

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-0 col-sm-12 col-md-offset-0 col-md-12">
    <div class="panel panel-default">
      <div class="panel-body" style="color:#000000;font-size: 12px">

        <form enctype="multipart/form-data" action="/update_nbp_sponsor/<%= nbp_sponsor.id %>" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">


          <!-- Check boxes Featured -->
          <div class="checkbox-inline">
            <% if nbp_sponsor.featured %>
              <h5><label><input type="checkbox" name="featured" checked>Featured</label></h5>
            <% else %>
              <h5><label><input type="checkbox" name="featured">Featured</label></h5>
            <% end %>
          </div>          

          <input name="sponsor_id" type="hidden" value="<%= nbp_sponsor.sponsor_id%>">

          <input name="nbp_id" type="hidden" value="<%= nbp_sponsor.nbp_id%>">

          <!-- Label and input for Lincoln Rationale -->
          <div class="form-group">
            <h5><label for="rationale" class="col-lg-2 control-label">
              Lincoln Rationale:
            </label></h5>
            <div class="col-lg-10">
              <textarea id="rationale" name="rationale" placeholder="e.g., Lincoln has sold..."  class="form-control" rows="5"><%= nbp_sponsor.rationale %></textarea>
            </div>
          </div>

          <!-- Label and input for Notes -->
          <div class="form-group">
            <h5><label for="note" class="col-lg-2 control-label">
              Notes:
            </label></h5>
            <div class="col-lg-10">
              <textarea id="note" name="note" placeholder="e.g., Lincoln has sold..."  class="form-control" rows="3"><%= nbp_sponsor.note %></textarea>
            </div>
          </div>


          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-warning">
                Update Sponsor Detail
              </button>

            </div>
          </div>

        </form>

      </div>
    </div>
  </div>
</div>


      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
