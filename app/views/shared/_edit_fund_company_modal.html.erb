
<!-- Button trigger modal -->
<div class="btn btn-edit" data-toggle="modal" data-target="#myModalEditFundCompany_<%=fund_company.id %>">
  <i class="fa fa-edit"></i>
</div>

<div class="modal inmodal fade" id="myModalEditFundCompany_<%=fund_company.id %>" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
          <form enctype="multipart/form-data" action="/update_fund_company/<%= fund_company.id %>" method="post" class="form-horizontal">
            <div class="modal-header">
                <h4 class="modal-title">Update Fund Company</h4>
                <small class="font-bold">Update fund or company.</small>
            </div>
            <div class="modal-body">

          <% if fund_company.errors.any? %>
            <% fund_company.errors.full_messages.each do |message| %>
              <div class="alert alert-dismissable alert-danger">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                <%= message %>
              </div>
            <% end %>
          <% end %>

          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for Fund -->
          <div class="form-group">
            <h5><label for="fund_id" class="col-lg-2 control-label">
              Fund
            </label></h5>
            <select name="fund_id" data-placeholder="Select Fund..." class="select2 form-control"  tabindex="2" style="width:80%">
              <% Fund.order("name asc").each do |fund| %>
              <option value="<%=fund.id %>"><%=fund.name %></option>
              <% end %>
            </select>
          </div>

          <!-- Label and input for Company -->
          <div class="form-group">
            <h5><label for="company_id" class="col-lg-2 control-label">
              Company
            </label></h5>
            <select name="company_id" data-placeholder="Select Company..." class="select2 form-control"  tabindex="2" style="width:80%">
              <% Company.order("name asc").each do |company| %>
              <option value="<%=company.id %>"><%=company.name %></option>
              <% end %>
            </select>
          </div>

          <!-- Label and input for Acquisition Date -->
          <div class="form-group">
            <label for="acquisition_date" class="col-sm-2 control-label">
              Acquisition Date
            </label>
            <div class="col-sm-10">
              <input type="date" id="acquisition_date" name="acquisition_date" placeholder="01/01/2012" class="form-control" value="<%= fund_company.acquisition_date %>">
            </div>
          </div>

          <!-- Label and input for Acquisition Price -->
          <div class="form-group">
            <label for="acquisition_price" class="col-sm-2 control-label">
              Acquisition Price
            </label>
            <div class="col-sm-10">
              <input type="float" id="acquisition_price" name="acquisition_price" placeholder="250.5" class="form-control" value="<%= fund_company.acquisition_price %>">
            </div>
          </div>

          <!-- Label and input for Link -->
          <div class="form-group">
            <label for="link" class="col-sm-2 control-label">
              Link
            </label>
            <div class="col-sm-10">
              <input type="string" id="link" name="link" placeholder="e.g., http://www.forbes.com/" class="form-control" value="<%= fund_company.link %>">
            </div>
          </div>     

            </div>
            <div class="modal-footer">
              <div class="form-group">
                <button type="button" class="btn btn-white" data-dismiss="modal">Close</button>
                <button class="btn btn-lincoln" style="margin-right: 10px;">Update</button>
              </div>
            </div>
          </form>
        </div>
    </div>
</div>

<script type="text/javascript">
$(function() {
  $(".select2").select2({
    dropdownCssClass: "increasedzindexclass",
  });
});
</script>
