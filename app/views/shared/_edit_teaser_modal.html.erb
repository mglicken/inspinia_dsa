
<!-- Button trigger modal -->
<div class="btn btn-edit" data-toggle="modal" data-target="#myModalEditTeaser_<%=teaser.id %>">
  <i class="fa fa-edit"></i>
</div>

<div class="modal inmodal fade" id="myModalEditTeaser_<%=teaser.id %>" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
          <form enctype="multipart/form-data" action="/update_teaser/<%= teaser.id %>" method="post" class="form-horizontal">
            <div class="modal-header" >
                <h4 class="modal-title">Edit Teaser Content</h4>
                <small class="font-bold">Update <%= teaser.name %> landing page.</small>
            </div>
            <div class="modal-body">

          <% if teaser.errors.any? %>
            <% teaser.errors.full_messages.each do |message| %>
              <div class="alert alert-dismissable alert-danger">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                <%= message %>
              </div>
            <% end %>
          <% end %>

          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">


          <input type="hidden" name="deal_id"  value="<%= teaser.deal_id %>">

          <input type="hidden" name="image_id"  value="<%= teaser.image_id %>">
 

          <!-- Label and input for Teaser Name -->
          <div class="form-group">
            <label for="name" class="col-sm-2 control-label">
              Teaser Name
            </label>
            <div class="col-sm-10">
              <input type="string" id="name" name="name" placeholder="e.g., e.g., Sponsor Name / Company Name (Year) Teaser" class="form-control" value="<%= teaser.name %>">
            </div>
          </div>

          <!-- Label and input for Teaser Date -->
          <div class="form-group">
            <label for="teaser_date" class="col-sm-2 control-label">
              Teaser Date
            </label>
            <div class="col-sm-10">
              <input type="date" id="teaser_date" name="teaser_date" placeholder="e.g., 09/09/2017" class="form-control" value="<%= teaser.teaser_date %>">
            </div>
          </div>
          <!-- Label and input for ppt_address -->
          <div class="form-group">
            <h5><label for="ppt_address" class="col-sm-2 control-label">
              Powerpoint Folder Address
            </label></h5>
            <div class="col-sm-10">
              <input type="string" id="ppt_address" name="ppt_address" placeholder="H://Marketing/Sponsor/Deal/NBP/Powerpoint/"  value="<%= teaser.ppt_address %>" class="form-control">
            </div>
          </div>

            </div>
            <div class="modal-footer">

                <div class="form-group">
                    <button class="btn btn-lincoln">
                      Update Teaser
                    </button>
                    <button type="button" class="btn btn-white" data-dismiss="modal">Close</button>
                </div>

            </div>
        </div>
      </form>
    </div>
</div>
