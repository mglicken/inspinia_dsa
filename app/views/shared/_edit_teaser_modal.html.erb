
<!-- Button trigger modal -->
<div class="btn btn-edit" data-toggle="modal" data-target="#myModalEditTeaser_<%=teaser.id %>">
  <i class="fa fa-edit"></i>
</div>

<!-- Modal -->
<div class="modal fade" id="myModalEditTeaser_<%=teaser.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Edit Teaser Details</h4>
      </div>
      <div class="modal-body">



<% if teaser.errors.any? %>
  <% teaser.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-0 col-sm-12 col-md-offset-0 col-md-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><%= teaser.deal.name %></h3>
      </div>
      <div class="panel-body">

        <form enctype="multipart/form-data" action="/update_teaser/<%= teaser.id %>" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">


          <input type="hidden" name="deal_id"  value="<%= teaser.deal_id %>">

          <input type="hidden" name="image_id"  value="<%= teaser.image_id %>">
 

          <!-- Label and input for Teaser Name -->
          <div class="form-group">
            <label for="name" class="col-sm-2 control-label">
              Teaser Name
            </label>
            <div class="col-sm-10">
              <input type="string" id="name" name="name" placeholder="e.g., e.g., Sponsor Name / Company Name (Year) Teaser" class="form-control" value="<%= teaser.name %>">
            </div>
          </div>

          <!-- Label and input for Teaser Date -->
          <div class="form-group">
            <label for="teaser_date" class="col-sm-2 control-label">
              Teaser Date
            </label>
            <div class="col-sm-10">
              <input type="date" id="teaser_date" name="teaser_date" placeholder="e.g., 09/09/2017" class="form-control" value="<%= teaser.teaser_date %>">
            </div>
          </div>

 

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-warning">
                Update Teaser
              </button>

            </div>
          </div>

        </form>

      </div>
    </div>
  </div>
</div>


      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
