
<!-- Button trigger modal -->
<div class="btn btn-md btn-primary" data-toggle="modal" data-target="#myModalShareSlideLayout">
  Share Layout
</div>

<!-- Modal -->
<div class="modal fade" id="myModalShareSlideLayout" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title" id="myModalLabel">Share <%= slide_layout.name%> Layout</h4>




<!-- Validation failure messages -->
<% if slide_layout.errors.any? %>
  <% slide_layout.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-0 col-sm-12 col-md-offset-0 col-md-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Share Layout</h3>
      </div>
      <div class="panel-body">

        <form enctype="multipart/form-data" action="/share_slide_layout/" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <input name="slide_layout_id" type="hidden" value="<%= slide_layout.id %>">


            <div class="form-group">
              <h5><label for="company_id" class="col-sm-2 control-label">
                Person
              </label></h5>
              <div class="col-sm-10">
                <%= select_tag :person_id, options_from_collection_for_select(Person.all.order("name ASC"), :id, :name), :class => "form-control" %>
              </div>
            </div>
 

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-primary">
                Share Layout
              </button>
            </div>
          </div>

        </form>

      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->


      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
