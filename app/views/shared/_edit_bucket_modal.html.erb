
<!-- Button trigger modal -->
<div class="btn btn-lincoln" data-toggle="modal" data-target="#myModalEditBucket_<%=bucket.id %>">
  <strong><%= bucket.title%></strong>
</div>

<!-- Modal -->
<div class="modal fade" id="myModalEditBucket_<%= bucket.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel"><%= bucket.nbp.name %> Category</h4>
      </div>
      <div class="modal-body">



<% if bucket.errors.any? %>
  <% bucket.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-0 col-sm-12 col-md-offset-0 col-md-12">
    <div class="panel panel-default">
      <div class="panel-body" style="color:#000000;font-size: 12px">

        <form enctype="multipart/form-data" action="/update_bucket/<%= bucket.id %>" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">


                   <!-- Label and input for Title -->
          <div class="form-group">
            <label for="title" class="col-sm-2 control-label" >
              Bucket:
            </label>
            <div class="col-sm-10">
              <input type="string" id="title" name="title" placeholder="e.g., Industrial Companies" class="form-control" value="<%= bucket.title %>">
            </div>
          </div>
          
          <%if nbp.nil?%>
          <!-- Label and input for Sponsor -->
            <div class="form-group">
              <h5><label for="nbp_id" class="col-sm-2 control-label">
                NBP
              </label></h5>
              <div class="col-sm-10">
                <%= select_tag :nbp_id, options_from_collection_for_select(Nbp.all.order("name ASC"), :id, :name, bucket.nbp_id), :class => "form-control" %>
              </div>
            </div>
          <%else%>
            <input name="nbp_id" type="hidden" value="<%= nbp.id%>">
          <%end%>

          <!-- Label and input for Strategic Rationale -->
          <div class="form-group">
            <label for="rationale" class="col-sm-2 control-label">
              Strategic Rationale:
            </label>
            <div class="col-sm-10">
              <textarea id="rationale" name="rationale" placeholder="e.g., Synergies... " class="form-control" rows="10"><%= bucket.rationale %></textarea>
            </div>
          </div>


          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-warning">
                Update Bucket Category
              </button>

            </div>
          </div>

        </form>

      </div>
    </div>
  </div>
</div>


      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
