
<!-- Button trigger modal -->
<div class="btn btn-edit btn-xs" data-toggle="modal" data-target="#myModalEditIOI_<%=ioi.id %>">
  <i class="fa fa-edit"></i>
</div>

<!-- Modal -->
<div class="modal fade" id="myModalEditIOI_<%=ioi.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Edit IOI Details</h4>
      </div>
      <div class="modal-body">



<% if ioi.errors.any? %>
  <% ioi.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><%= ioi.deal.name %> IOI</h3>
      </div>
      <div class="panel-body">

        <form action="/update_ioi/<%= ioi.id %>" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for name -->
          <div class="form-group">
            <h5><label for="name" class="col-sm-2 control-label">
              IOI Document Title
            </label></h5>
            <div class="col-sm-10">
              <input type="string" id="name" name="name" placeholder="e.g., Company Name / Acquirer Name IOI" class="form-control" value="<%= ioi.name %>">
            </div>
          </div>

          <!-- Label and input for Company Name -->
          <div class="form-group">
            <label for="name" class="col-sm-2 control-label">
              Deal
            </label>
            <div class="col-sm-10">
              <%= select_tag :deal_id, options_from_collection_for_select(Deal.all, :id, :name, ioi.deal_id), :class => "form-control" %>
            </div>
          </div>
          <!-- Label and input for IOI Date -->
          <div class="form-group">
            <label for="ioi_date" class="col-sm-2 control-label">
              IOI Date
            </label>
            <div class="col-sm-10">
              <input type="date" id="ioi_date" name="ioi_date" placeholder="e.g., 09/09/2017" class="form-control" value="<%= ioi.ioi_date %>">
            </div>
          </div>
          <!-- Label and input for Image ID -->
          <div class="form-group">
            <label for="image_id" class="col-sm-2 control-label">
              Image ID
            </label>
            <div class="col-sm-10">
              <input type="string" id="image_id" name="image_id" placeholder="alkdjsagflj231564651658134e8" class="form-control" value="<%= ioi.image_id %>">
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-warning">
                Update IOI
              </button>
              or
              <a href="/iois/<%= ioi.id %>">Cancel</a>
            </div>
          </div>
        </form>

      </div>
    </div>
  </div>
</div>


      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
