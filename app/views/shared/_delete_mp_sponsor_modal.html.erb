
<!-- Button trigger modal -->
<div class="btn btn-danger btn-xs" data-toggle="modal" data-target="#myModalDeleteMPSponsor_<%= mp_sponsor.id %>">
  <i class="fa fa-trash-o"></i>
</div>


<div class="modal inmodal fade" id="myModalDeleteMPSponsor_<%= mp_sponsor.id %>" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
             <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title" >Remove <%= mp_sponsor.sponsor.name %></h4>
                <small class="font-bold">Remove <strong><%= mp_sponsor.sponsor.name %></strong> from <strong><%= mp_sponsor.mp.name %></strong>.</small>
            </div>
            <div class="modal-body">

          <% if mp_sponsor.errors.any? %>
            <% mp_sponsor.errors.full_messages.each do |message| %>
              <div class="alert alert-dismissable alert-danger">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                <%= message %>
              </div>
            <% end %>
          <% end %>

          <h3 text-align="center"><p> Are you sure you want to delete <span font-weight="bold"><%= mp_sponsor.sponsor.name %> MP Sponsor</span>?</p>
          <p><small>Once it is deleted, any LOIs or content associated with it will be destroyed!!!</small></p></h3>


            </div>
            <div class="modal-footer">

                    <a class="btn btn-danger" href="/delete_mp_sponsor/<%=mp_sponsor.id %>">
                      Delete MP Sponsor
                    </a>
                    <button type="button" class="btn btn-white" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
