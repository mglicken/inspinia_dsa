
<!-- Button trigger modal -->
<div class="btn btn-danger" data-toggle="modal" data-target="#myModalDeleteDeal_<%= deal.id %>">
  <i class="fa fa-trash-o"></i>
</div>

<!-- Modal -->
<div class="modal fade" id="myModalDeleteDeal_<%= deal.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel"><%= deal.name %></h4>
      </div>
      <div class="modal-body">



<!-- Validation failure messages -->

<% if deal.errors.any? %>
  <% deal.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-0 col-sm-12 col-md-offset-0 col-md-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Delete Deal</h3>
      </div>
      <div class="panel-body">

        <form enctype="multipart/form-data" action="/delete_deal/<%= deal.id %>" method="get" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <h3 text-align="center"> Are you sure you want to delete <span font-weight="bold"><%= deal.name %></span>?
          <small>Once it is deleted, all NBPs, CIPs, and MPs associated with it will be destroyed!!!</small></h3>


          <div class="form-group pull-left">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-success">
                Delete Deal
              </button>
            </div>
          </div>

        </form>

      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->


