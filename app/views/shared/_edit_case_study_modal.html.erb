
<!-- Button trigger modal -->
<div class="btn btn-edit" data-toggle="modal" data-target="#myModalEditCaseStudy_<%=case_study.id %>">
  <i class="fa fa-edit"></i>
</div>

<div class="modal inmodal fade" id="myModalEditCaseStudy_<%=case_study.id %>" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
          <form enctype="multipart/form-data" action="/update_case_study/<%= case_study.id %>" method="post" class="form-horizontal">
            <div class="modal-header" >
                <h4 class="modal-title">Create Case Study Content</h4>
                <small class="font-bold">Add a new landing page for a Case Study document.</small>
            </div>
            <div class="modal-body">

          <% if case_study.errors.any? %>
            <% case_study.errors.full_messages.each do |message| %>
              <div class="alert alert-dismissable alert-danger">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                <%= message %>
              </div>
            <% end %>
          <% end %>

          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for Case Study Name -->
          <div class="form-group">
            <label for="name" class="col-sm-2 control-label">
              Case Study Name
            </label>
            <div class="col-sm-10">
              <input type="string" id="name" name="name" placeholder="e.g., e.g., Sponsor Name / Company Name (Year) CS" class="form-control" value="<%= case_study.name %>">
            </div>
          </div>

          <input type="hidden" name="deal_id"  value="<%= case_study.deal_id %>">

          <input type="hidden" name="image_id"  value="<%= case_study.image_id %>">

           <!-- Label and input for ppt_address -->
          <div class="form-group">
            <h5><label for="ppt_address" class="col-sm-2 control-label">
              Powerpoint Folder Address
            </label></h5>
            <div class="col-sm-10">
              <input type="string" id="ppt_address" name="ppt_address" placeholder="H://Marketing/Sponsor/Deal/NBP/Powerpoint/"  value="<%= case_study.ppt_address%>" class="form-control">
            </div>
          </div>

            </div>
            <div class="modal-footer">

                <div class="form-group">
                    <button class="btn btn-lincoln">
                      Update Case Study
                    </button>
                    <button type="button" class="btn btn-white" data-dismiss="modal">Close</button>
                </div>

            </div>
        </div>
      </form>
    </div>
</div>