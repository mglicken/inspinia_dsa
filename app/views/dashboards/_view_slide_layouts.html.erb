

<div class="col-lg-6">
    <div class="ibox float-e-margins">
        <div class="ibox-title">
            <h5>Slide Layout list</h5>
            <div class="ibox-tools">
                <a class="collapse-link">
                    <i class="fa fa-chevron-up"></i>
                </a>
                <a class="close-link">
                    <i class="fa fa-times"></i>
                </a>
            </div>
        </div>
        <div class="ibox-content">
            <table class="table table-hover no-margins">
                <thead>
                <tr>
                    <th>Slide Layout</th>
                    <th># of Slides</th>
                </tr>
                </thead>
                <tbody>
                <tr>
                    <td><strong><a href="/favorite_slides/"> Favorited Slides</a></strong></td>
                    <td><%= current_user.favorite_slides.count %></td>
                </tr>
                <% current_user.slide_layouts.each do |slide_layout|%>
                  <tr>
                    <td><strong><a href="/slide_layouts/<%=slide_layout.id%>"><%= slide_layout.name %></a></strong></td>
                    <td><%= slide_layout.slides.count %></td>
                  </tr>
                <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>
