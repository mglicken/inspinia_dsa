<style>
.scrollbar {
  overflow-x: scroll;
  white-space: nowrap;
  padding: 5px;
  padding-bottom: 0px;
  margin-right: 10px;
}
</style>
<div class="ibox collapsed float-e-margins">
    <div class="ibox-title">
        <h5>NBP Financial Buyer Lists (<%= @nbp_sponsors.count %>)</h5>
        <div class="ibox-tools">
            <a class="collapse-link">
                <i class="fa fa-chevron-up"></i>
            </a>
            <a class="close-link">
                <i class="fa fa-times"></i>
            </a>
        </div>
    </div>
    <div class="ibox-content">

        <div class="row">
            <div class="col-lg-12">
                <div class="scrollbar">
                    <table class="table table-hover margin bottom" style="table-layout: fixed;">
                        <thead>
                        <tr>
                            <th style="width:40px;text-align:center;"></th>
                            <th style="width:90px;text-align:center;">Date</th>
                            <th style="width:150px;">Pitch Company</th>
                            <th style="width:500px; white-space: wrap;">Lincoln Rationale</th>
                            <th style="width:500px; white-space:normal;">Internal Notes</th>
                        </tr>
                        </thead>
                        <tbody>
                                <%i=0%>
                                <% @nbp_sponsors.each do |nbp_sponsor| 
                                    i=i+1%>
                        <% if nbp_sponsor.featured %>
                            <tr class="info">
                        <% else %>
                            <tr>
                        <% end %>
                            <td class="text-center">
                                <a type="button" href="/nbps/<%=nbp_sponsor.nbp.id %>/sponsors"><i class="fa fa-location-arrow"></i></a>
                            </td>
                            <td><%=nbp_sponsor.nbp.nbp_date%></td>
                            <td style="white-space:normal;"><a href="/companies/<%=nbp_sponsor.nbp.deal.company.id %>"><%=nbp_sponsor.nbp.deal.company.name %></a></td>
                            <td style="white-space:normal;"><%= simple_format(nbp_sponsor.rationale) %></td>
                            <td style="white-space:normal;"><%= simple_format(nbp_sponsor.note) %></td>
                        </tr>
                        <%end%>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>