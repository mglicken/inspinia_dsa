<div class="row container">
<% @companies.order("name ASC").each do |company| %>
  <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4 isotope-item">
    <div class="panel panel-default">
      <div class="panel-heading" >
        <h3 class="panel-title" style="font-size:12px"><%= company.name %></h3>
      </div>
      <div class="panel-body" >
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal" style="font-size:10px" >

              <dt>Company</dt>
              <dd><a href="/companies/<%=company.id %>"><%= company.name %></a></dd>
              <dt>Acquisition Date</dt>
              <dd><%= company.fund_company.acquisition_date %></dd>
              <dt>Acquisition Price</dt>
              <dd>$<%= company.fund_company.acquisition_price %> million</dd>
              <% if company.fund_company.link.present? %>
                <dt>Details</dt>
                <dd><a href=<%= company.fund_company.link %> target="_blank">
                  <%= company.fund_company.link[7..20] %>...
                </a></dd>
              <% end %>
            </dl>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
</div>