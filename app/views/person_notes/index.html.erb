
<div class="page-header">
  <h1>
    Person Notes
    <a href="/person_notes/new" class="btn btn-lg btn-success"><i class="fa fa-plus"></i></a>
  </h1>
</div>

<!-- Responsive, Isotope-based layout example -->

<div class="row">
  <div class="col-xs-12">
    <input type="text" id="quicksearch" placeholder="Search Person Notes (start typing)" class="form-control">
  </div>
</div>

<hr>

<div class="row isotope-container">
<% @person_notes.each do |person_note| %>
  <div class="col-xs-11 col-sm-11 col-md-11 col-lg-11 isotope-item">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Person Note # <%= person_note.id %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <class="dl-horizontal">

              <dt> Note ID</dt>
              <dd><%= person_note.note_id %></dd>
              <dt> Person ID</dt>
              <dd><%= person_note.person_id %></dd>          

            </dl>
            <div class="btn-group btn-group-justified">
              <a href="/person_notes/<%= person_note.id %>" class="btn btn-primary">
                <i class="fa fa-search-plus"></i>
              </a>

              <a href="/person_notes/<%= person_note.id %>/edit" class="btn btn-warning">
                <i class="fa fa-edit"></i>
              </a>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
</div>

<%= render('shared/quick_search_js') %>