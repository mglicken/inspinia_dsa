<!-- Validation failure messages -->

<% if @person_note.errors.any? %>
  <% @person_note.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Add Person Note</h3>
      </div>
      <div class="panel-body">
        <form action="/create_person_note" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">


          <!-- Label and input for Note ID -->
          <div class="form-group">
            <label for="note_id" class="col-sm-2 control-label">
              Note ID
            </label>
            <div class="col-sm-10">
              <input type="integer" id="note_id" name="note_id" placeholder="e.g., 17" class="form-control" value="<%= @person_note.note_id %>">
            </div>
          </div>

          <!-- Label and input for Person ID -->
          <div class="form-group">
            <label for="person_id" class="col-sm-2 control-label">
              Person ID
            </label>
            <div class="col-sm-10">
              <input type="integer" id="person_id" name="person_id" placeholder="e.g., 17" class="form-control" value="<%= @person_note.person_id %>">
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-success">
                Create Person Note
              </button>
              or
              <a href="/person_notes">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
