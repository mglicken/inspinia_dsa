
<div class="row container">
  <% @person.work_histories.order("start_year DESC").each do |work_history| %>
    <div class="col-xs-9 col-sm-9 col-md-9 col-lg-9 isotope-item">
      <div class="panel panel-default">
        <div class="panel-heading" >
          <h3 class="panel-title" style="font-size:12px">
            <% if work_history.current %>
              <strong><a href="/companies/<%= work_history.company_id%>"><%= work_history.company.name %></a></strong> (<%= work_history.role.name %>)
            <% else %>
              <strong><a href="/companies/<%= work_history.company_id%>"><%= work_history.company.name %></a></strong> (<%= work_history.role.name %>)
            <%end%>
            <%= render('shared/edit_work_history_modal', :work_history => work_history)%>
          </h3>
        </div>
      </div>
    </div>
    <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2 isotope-item">
      <div class="panel panel-default">
        <div class="panel-heading" >
          <h3 class="panel-title" style="font-size:12px">
            <% if work_history.current %>
              <%= work_history.start_year %>-Present
            <% else %>
              <%= work_history.start_year %>-<%= work_history.end_year %>
            <%end%>
          </h3>
        </div>
      </div>
    </div>
  <% end %>
</div>