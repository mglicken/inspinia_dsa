<div class="ibox collapsed float-e-margins">
    <div class="ibox-title">
        <h5>Work History (<%= @person.work_histories.count %>)</h5>
        <div class="ibox-tools">
            <a class="collapse-link">
                <i class="fa fa-chevron-up"></i>
            </a>
            <a class="close-link">
                <i class="fa fa-times"></i>
            </a>
        </div>
    </div>
    <div class="ibox-content">

        <div class="row">
            <div class="col-lg-12">
                <table class="table table-hover margin bottom">
                    <thead>
                    <tr>
                        <th style="width:80%">Company</th>
                        <th></th>

                    </tr>
                    </thead>
                    <tbody>
                            <%i=0%>
                            <% @person.work_histories.order("start_year desc").each do |work_history| %>
                    <tr>
                        <td>
                            <strong><a href="/companies/<%= work_history.company_id%>"><%= work_history.company.name %></a></strong> (<%= work_history.role.name %>)
                            <%= render('shared/edit_work_history_modal', :work_history => work_history)%>
                        </td>
                        <td>
                            <% if work_history.current %>
                              <%= work_history.start_year %>-Present
                            <% else %>
                              <%= work_history.start_year %>-<%= work_history.end_year %>
                            <%end%>
                        </td>
                    </tr>
                    <%end%>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>