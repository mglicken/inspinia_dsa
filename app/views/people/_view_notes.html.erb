<div class="ibox collapsed float-e-margins">
    <div class="ibox-title">
        <h5>Notes (<%= @person.notes.count %>)</h5>
        <div class="ibox-tools">
            <a class="collapse-link">
                <i class="fa fa-chevron-up"></i>
            </a>
            <a class="close-link">
                <i class="fa fa-times"></i>
            </a>
        </div>
    </div>
    <div class="ibox-content">

        <div class="row">
            <div class="col-lg-12">
                <table class="table table-hover margin bottom">
                    <thead>
                    <tr>
                        <th style="width: 8%"class="text-center">Date</th>
                        <th style="width: 12%">Title</th>
                        <th style="width: 12%">People</th>
                        <th style="width: 12%">Companies</th>
                        <th style="width: 12%">Sponsors</th>
                        <th>Detail</th>

                    </tr>
                    </thead>
                    <tbody>

                            <% @person.notes.order("date desc").each do |note| %>
                    <tr>
                        <td class="text-center"><%= note.date %></td>
                        <td><%= note.title %></td>
                        <td>
                            <% note.people.each do |person| %>
                                <p><a href="/people/<%=person.id%>"><%= person.name %></a></p>
                            <% end %>
                        </td>
                        <td >
                            <% note.companies.each do |company| %>
                                <p><a href="/companies/<%=company.id%>"><%= company.name %></a></p>
                            <% end %>
                        </td>
                        <td>
                            <% note.sponsors.each do |sponsor| %>
                                <p><a href="/sponsors/<%=sponsor.id%>"><%= sponsor.name %></a></p>
                            <% end %>
                        </td>
                        <td><%= simple_format(note.detail) %></td>
                    </tr>
                    <%end%>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>