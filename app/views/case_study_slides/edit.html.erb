<!-- Validation failure messages -->

<% if @case_study_slide.errors.any? %>
  <% @case_study_slide.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
  
      <div class="panel-heading">
        <h3 class="panel-title">Edit Case Study Slide</h3>
      </div>
      <div class="panel-body">
        <form action="/update_case_study_slide/<%= @case_study_slide.id %>" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for Slide ID -->
          <div class="form-group">
            <label for="slide_id" class="col-sm-2 control-label">
             Slide ID
            </label>
            <div class="col-sm-10">
              <input type="integer" id="slide_id" name="slide_id" placeholder="e.g., 17" class="form-control" value="<%= @case_study_slide.slide_id %>">
            </div>
          </div>

          <!-- Label and input for Case Study ID -->
          <div class="form-group">
            <label for="case_study_id" class="col-sm-2 control-label">
              Case Study ID
            </label>
            <div class="col-sm-10">
              <input type="integer" id="case_study_id" name="case_study_id" placeholder="e.g., 17" class="form-control" value="<%= @case_study_slide.case_study_id %>">
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-warning">
                Update Case Study Slide
              </button>
              or
              <a href="/case_study_slides/<%= @case_study_slide.id %>">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>


<!-- End responsive panel example -->
