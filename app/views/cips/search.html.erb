<div class="page-header">
  <h1>
    CIPs
    <%= render('shared/create_cip_modal') %>
  </h1>
</div>

<!-- Responsive, Isotope-based layout example -->

<div class="row">
  <div class="col-xs-12">
    <input type="text" id="quicksearch" placeholder="Search CIPs (start typing)" class="form-control">
  </div>
</div>

<hr>

<div class="row isotope-container">
<% @cips.order("cip_date DESC").each do |cip| %>
  <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4 isotope-item">
    <div class="panel panel-default">
      <div class="panel-heading" >
        <h3 class="panel-title" style="font-size:12px"><%= cip.name %></h3>
      </div>
      <div class="panel-body" >
        <div class="row">

          <div class="col-md-12">
            <dl class="dl-horizontal" style="font-size:10px" >

              <dt>Deal</dt>
              <dd><a href="/deals/<%=cip.deal.id %>"><%= cip.deal.name %></a></dd>
              <dt>CIP</dt>
              <dd> <a href="/cips/<%=cip.id %>"><%= cip.cip_date %></a></dd>


            </dl>
            <div class="btn-group btn-group-justified">
              <a href="/cips/<%= cip.id %>" class="btn btn-lincoln">
                <i class="fa fa-search-plus"></i>
              </a>

              <%= render('shared/edit_cip_modal', :cip => cip)%>

              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
</div>

<%= render('shared/quick_search_js') %>
