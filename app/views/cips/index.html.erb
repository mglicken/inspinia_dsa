<%= render('shared/file_download_upload', path: "cips") %>
<div class="page-header">
  <h1>
    CIPs
  </h1>
</div>

<!-- Responsive, Isotope-based layout example -->

<div class="row">
  <div class="col-xs-12">
    <input type="text" id="quicksearch" placeholder="Search CIPs (start typing)" class="form-control">
  </div>
</div>

<hr>

<div class="row isotope-container">
<% @cips.order("cip_date DESC").each do |cip| %>
  <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3 isotope-item">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><a href="/cips/<%= cip.id %>">
            <%= cip.name %></a></h3>
      </div>
      <% if cip.cip_date.nil? | cip.cip_date == "" %>      
      <div class="panel-body">
        <dl>
          <dt></dt>
          <dd><%= cip.cip_date %></dd>
        </dl>
      </div>
      <% end %>
    </div>
  </div>
<% end %>
</div>

<%= render('shared/quick_search_js') %>