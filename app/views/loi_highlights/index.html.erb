
<div class="page-header">
  <h1>
    LOI Highlights
    <a href="/loi_highlights/new" class="btn btn-success"><i class="fa fa-plus"></i></a>
  </h1>
</div>

<!-- Responsive, Isotope-based layout example -->

<div class="row">
  <div class="col-xs-12">
    <input type="text" id="quicksearch" placeholder="Search LOI Highlights (start typing)" class="form-control">
  </div>
</div>

<hr>

<div class="row isotope-container">
<% @loi_highlights.each do |loi_highlight| %>
  <div class="col-xs-11 col-sm-11 col-md-11 col-lg-11 isotope-item">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">LOI Highlight # <%= loi_highlight.id %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <class="dl-horizontal">

              <dt> LOI</dt>
              <dd><%= loi_highlight.loi.deal.name + " - " + loi_highlight.loi.name %></dd>
              <dt> Highlight</dt>
              <dd><%= loi_highlight.highlight.name %></dd>          
              <dt> Detail</dt>
              <dd><%= loi_highlight.detail %></dd>       

            </dl>
            <div class="btn-group btn-group-justified">
              <a href="/loi_highlights/<%= loi_highlight.id %>" class="btn btn-primary">
                <i class="fa fa-search-plus"></i>
              </a>

              <a href="/loi_highlights/<%= loi_highlight.id %>/edit" class="btn btn-warning">
                <i class="fa fa-edit"></i>
              </a>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
</div>

<%= render('shared/quick_search_js') %>