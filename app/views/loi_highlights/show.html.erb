<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"> LOI Highlight # <%= @Loi_highlight.id %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl>

              <dt> LOI ID</dt>
              <dd><%= @Loi_highlight.Loi_id %></dd>
              <dt> Highlight ID</dt>
              <dd><%= @Loi_highlight.highlight_id %></dd>
              <dt> Detail</dt>
              <dd><%= @Loi_highlight.detail %></dd>  

            </dl>
            <div class="btn-group btn-group-justified">
              <a href="/Loi_highlights/<%= @Loi_highlight.id %>" class="btn btn-primary">
                <i class="fa fa-chevron-left"></i>
              </a>

              <a href="/Loi_highlights/<%= @Loi_highlight.id %>/edit" class="btn btn-warning">
                <i class="fa fa-edit"></i>
              </a>

            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>

<!-- End responsive panel example -->
