<div class="ibox collapsed float-e-margins">
    <div class="ibox-title">
        <h5>Sponsors (<%= @sponsors.count %>)</h5>
        <div class="ibox-tools">
            <a class="collapse-link">
                <i class="fa fa-chevron-up"></i>
            </a>
            <a class="close-link">
                <i class="fa fa-times"></i>
            </a>
        </div>
    </div>
    <div class="ibox-content">

        <div class="row">
            <div class="col-lg-12">
                <table class="table table-hover margin bottom">
                    <thead>
                    <tr>
                        <th>Sponsor</th>
                        <th style="width: 20%;" class="text-center">Location</th>
                        <th style="width: 12%;" class="text-center">Phone</th>
                        <th style="width: 20%;">Web</th>
                        <th style="width: 5%;"></th>
                    </tr>
                    </thead>
                    <tbody>

                            <% @sponsors.each do |sponsor| %>
                    <tr>
                        <td><a href="/companies/<%= sponsor.id %>"><%= sponsor.name %></a></td>
                        <td class="text-center">
                            <% if sponsor.state.present? %>
                                <%= sponsor.city %>, <%= sponsor.state %>
                            <% end %>      
                        </td>
                        <td class="text-center">
                        <% if sponsor.phone.present? %>
                            (<%= sponsor.phone.to_s[0..2] %>) <%= sponsor.phone.to_s[3..5] %>-<%= sponsor.phone.to_s[6..9]%>
                        <% end %>
                        </td>
                        <td>
                            <% if sponsor.web_address.present? %>
                                <%if sponsor.web_address[0..4] == "https" %>
                                 <a href="<%= sponsor.web_address %>" target="_blank"><%= sponsor.web_address[8..(sponsor.web_address.length-1)] %></a>
                                <% elsif sponsor.web_address[0..3] == "http" %>
                                  <a href="<%= sponsor.web_address %>" target="_blank"><%= sponsor.web_address[7..(sponsor.web_address.length-1)] %></a>
                                <%else%>
                                  <a href="<%= sponsor.web_address %>" target="_blank"><%= sponsor.web_address %></a>
                                <%end%>
                            <%end%>
                        </td>
                        <td>
                            <a href="<%= sponsor.linkedin_url%>" class="btn btn-xs" target="_blank"><i class="fa fa-linkedin"></i></a>
                        </td>
                    </tr>
                    <%end%>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>