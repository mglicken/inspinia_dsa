<div class="row">
  <div class="col-lg-offset-2 col-lg-8">
    <div class="ibox-content">
        <h3 class="ibox-title"><%= @company.name %></h3>
      <div class="ibox-body">
        <div class="row">

          <div class="col-lg-10">
            <dl class="dl-horizontal">

              <% if @company.description.present? %>
              <dt>Description:</dt>
                <% if @company.description.length <= 600 %>
                  <dd> <address>
                      <%= simple_format(@company.description) %>
                      </address>                                  
                  </dd>
                <% else %>
                  <dd> <address>
                      <%= simple_format(@company.description[0..599]) %>...<br>
                      <%= render('shared/content_modal', :content => @company.description, :title => "#{@company.name} Description")%>
                      </address>                                  
                  </dd>
                <% end %>  
              <% end %>  
            </dl>
          </div>
          <div class="col-lg-2">
              <a href="<%= @company.linkedin_url%>" class="btn btn-lg" target="_blank"><i class="fa fa-linkedin"></i></a>
              <% if @followed %>
                <a href="/unfollow_company/<%=@company.id%>" class="btn btn-lg btn-unfollow"><i class="fa fa-star"></i></a>
              <% else %>
                <a href="/follow_company/<%=@company.id%>" class="btn btn-lg btn-follow"><i class="fa fa-star-o"></i></a>
              <% end %>
          </div>

          <div class="btn-group btn-group-justified">
            <a href="/companies" class="btn btn-lincoln">
              <i class="fa fa-reply"></i>
            </a>

            <%= render('shared/edit_company_modal', :company => @company)%>
            <% if current_user.access_id < 3 %>
              <%= render('shared/delete_company_modal', :company => @company)%>
            <% end %>

          </div>
        </div>
      </div>

    </div>
  </div>
</div>

