<div class="ibox">
    <div class="ibox-title">
        <h5>Locations (<%= @locations.count %>)</h5>
        <div class="ibox-tools">
            <a class="collapse-link">
                <i class="fa fa-chevron-up"></i>
            </a>
            <a class="close-link">
                <i class="fa fa-times"></i>
            </a>
        </div>
    </div>
    <div class="ibox-content">

        <div id="bubbles"></div>

    </div>

</div>

<script type="text/javascript">

  var bubble_map = new Datamap({
    element: document.getElementById("bubbles"),
    scope: '<%= @scope %>',
    done: function(datamap) {
        datamap.svg.selectAll('.datamaps-subunit').on('click', function(bubbles) {
            url = '/companies/<%= @company.id %>/country/' + bubbles.properties.name;
            window.location.href = url;
        });
    },
    responsive: true,
    geographyConfig: {
      popupOnHover: false,
      highlightOnHover: false
    },
          fills: {
              defaultFill: '#E9E9E9',
              active: '#2BA587'
          },
          geographyConfig: {
              dataUrl: null, //if not null, datamaps will fetch the map JSON (currently only supports topojson)
              hideAntarctica: true,
              borderWidth: 1,
              borderOpacity: 1,
              borderColor: '#FFFFFF',
              popupOnHover: false, //disable the popup while hovering
              highlightOnHover: true,
              highlightFillColor: '#DBDAD6',
              highlightBorderColor: '#FFFFFF',
              highlightBorderWidth: 2,
              highlightBorderOpacity: 1
          },
          bubblesConfig: {
                  borderWidth: 2,
                  borderOpacity: 1,
                  borderColor: '#FFFFFF',
                  animate: true,
                  popupOnHover: true,
                  fillOpacity: 0.65,
                  highlightOnHover: true,
                  highlightFillColor: '#127e68',
                  highlightBorderColor: '#127e68',
                  highlightFillOpacity: 0.85
          }
  });
  bubble_map.bubbles(
      $.getJSON("/location_query/<%= @company.id%>.json", function(locations) {
          bubble_map.bubbles(locations,
          {
              popupTemplate: function(geo, data) {
                  return '<div style="text-align: center; z-index: 9999" class="hoverinfo bg-white"><strong>' + data.name + '</strong><br>' + data.street + '<br>' + data.city + ',' + data.state + ' '+ data.zip + '<br>' + data.country + '</div>'
              }
          
          });
      })
  );

  $(window).on('resize', function() {
     bubble_map.resize();
  });

d3.selectAll(".hoverinfo").on('click', function(bubble) {
    alert('test');
});


</script>