<!-- Validation failure messages -->

<% if @ioi_slide.errors.any? %>
  <% @ioi_slide.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Add IOI Slide</h3>
      </div>
      <div class="panel-body">
        <form action="/create_ioi_slide" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for Slide ID -->
          <div class="form-group">
            <label for="slide_id" class="col-sm-2 control-label">
              Slide ID
            </label>
            <div class="col-sm-10">
              <input type="integer" id="slide_id" name="slide_id" placeholder="e.g., 17" class="form-control" value="<%= @ioi_slide.slide_id %>">
            </div>
          </div>

          <!-- Label and input for IOI ID -->
          <div class="form-group">
            <label for="ioi_id" class="col-sm-2 control-label">
              IOI ID
            </label>
            <div class="col-sm-10">
              <input type="integer" id="ioi_id" name="ioi_id" placeholder="e.g., 17" class="form-control" value="<%= @ioi_slide.ioi_id %>">
            </div>
          </div>

          <!-- Label and input for PPT Address ID -->
          <div class="form-group">
            <label for="ppt_address" class="col-sm-2 control-label">
              PPT Address
            </label>
            <div class="col-sm-10">
              <input type="ppt_address" id="ppt_address" name="ppt_address" placeholder="e.g., H Drive Address" class="form-control" value="<%= @ioi_slide.ppt_address %>">
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-success">
                Create IOI Slide
              </button>
              or
              <a href="/ioi_slides">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
