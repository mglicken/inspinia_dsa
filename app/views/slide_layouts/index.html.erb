<%= render('shared/file_download_upload', path: "slide_layouts") %>
<div class="page-header">
  <h1>
    Slide Layouts
  </h1>
</div>

<!-- Responsive, Isotope-based layout example -->

<div class="row">
  <div class="col-xs-12">
    <input type="text" id="quicksearch" placeholder="Search Slide Layouts (start typing)" class="form-control">
  </div>
</div>

<br>

<div class="row isotope-container">
<% @slide_layouts.each do |slide_layout| %>
  <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3 isotope-item">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><a href="/slide_layouts/<%= slide_layout.id %>">
            <%= slide_layout.name %></a></h3>
      </div>
      <div class="panel-body">
        <dl>
          <dt></dt>
          <dd><%= slide_layout.deal.name %></dd>
        </dl>
      </div>
    </div>
  </div>
<% end %>
</div>

<%= render('shared/quick_search_js') %>