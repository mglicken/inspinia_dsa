<br>
<div class="row">
  <div class="col-lg-offset-1 col-lg-10">
    <div class="ibox-content">
      <h3 class="ibox-title"> Share <%= @slide_layout.name %> Layout!</h3>

      <div class="ibox-body">
        <br>
        <form enctype="multipart/form-data" action="/share_slide_layout/" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <input name="slide_layout_id" type="hidden" value="<%= @slide_layout.id %>">

            <div class="form-group">
              <h5><label for="person_id" class="col-lg-2 control-label">
                Person
              </label></h5>
              <div class="col-lg-6">
                <%= select_tag :person_id, options_from_collection_for_select(@people, :id, :backwards_name), :class => "form-control" %>
              </div>
            </div>
 
          <div class="form-group">
            <div class="col-lg-offset-2 col-lg-10">
              <button class="btn btn-primary">
                Share Layout
              </button>
            </div>
          </div>

        </form>
      </div>
      <br>
    </div>
  </div>
</div>


