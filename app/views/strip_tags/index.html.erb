
<div class="page-header">
  <h1>
    Strip Tags
    <a href="/strip_tags/new" class="btn btn-success"><i class="fa fa-plus"></i></a>
  </h1>
</div>

<!-- Responsive, Isotope-based layout example -->

<div class="row">
  <div class="col-xs-12">
    <input type="text" id="quicksearch" placeholder="Search Strip Tags (start typing)" class="form-control">
  </div>
</div>

<hr>

<div class="row isotope-container">
<% @strip_tags.each do |strip_tag| %>
  <div class="col-xs-11 col-sm-11 col-md-11 col-lg-11 isotope-item">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">strip_tag # <%= strip_tag.id %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <class="dl-horizontal">

              <dt> NBP Company ID</dt>
              <dd><%= strip_tag.nbp_company_id %></dd>
              <dt> Tag ID</dt>
              <dd><%= strip_tag.tag_id %></dd>          
              <dt> Value</dt>
              <dd><%= strip_tag.value %></dd>       

            </dl>
            <div class="btn-group btn-group-justified">
              <a href="/strip_tags/<%= strip_tag.id %>" class="btn btn-primary">
                <i class="fa fa-search-plus"></i>
              </a>

              <a href="/strip_tags/<%= strip_tag.id %>/edit" class="btn btn-warning">
                <i class="fa fa-edit"></i>
              </a>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
</div>

<%= render('shared/quick_search_js') %>