<!-- Validation failure messages -->

<% if @strip_tag.errors.any? %>
  <% @strip_tag.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
  
      <div class="panel-heading">
        <h3 class="panel-title">Edit Strip Tag</h3>
      </div>
      <div class="panel-body">
        <form action="/update_strip_tag/<%= @strip_tag.id %>" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for NBP Company ID -->
          <div class="form-group">
            <label for="nbp_company_id" class="col-sm-2 control-label">
              NBP Company ID
            </label>
            <div class="col-sm-10">
              <input type="integer" id="nbp_company_id" name="nbp_company_id" placeholder="e.g., 17" class="form-control" value="<%= @strip_tag.nbp_company_id %>">
            </div>
          </div>

          <!-- Label and input for Tag ID -->
          <div class="form-group">
            <label for="tag_id" class="col-sm-2 control-label">
              Tag ID
            </label>
            <div class="col-sm-10">
              <input type="integer" id="tag_id" name="tag_id" placeholder="e.g., 17" class="form-control" value="<%= @strip_tag.tag_id %>">
            </div>
          </div>

          <!-- Label and input for Value -->
          <div class="form-group">
            <label for="value" class="col-sm-2 control-label">
              Value
            </label>
            <div class="col-sm-10">
              <input type="integer" id="value" name="value" placeholder="e.g., 1" class="form-control" value="<%= @strip_tag.value %>">
            </div>
          </div>          

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-warning">
                Update Strip Tag
              </button>
              or
              <a href="/strip_tags/<%= @strip_tag.id %>">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>


<!-- End responsive panel example -->
