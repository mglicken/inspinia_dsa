
<div class="page-header">
  <h1>
    Deal Stages
    <a href="/deal_stages/new" class="btn btn-lg btn-success"><i class="fa fa-plus"></i></a>
  </h1>
</div>

<!-- Responsive, Isotope-based layout example -->

<div class="row">
  <div class="col-xs-12">
    <input type="text" id="quicksearch" placeholder="Search Deal Stages (start typing)" class="form-control">
  </div>
</div>

<hr>

<div class="row isotope-container">
<% @deal_stages.each do |deal_stage| %>
  <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2 isotope-item">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><%= deal_stage.name %> (#<%= deal_stage.id %>)</h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">

           </dl>
            <div class="btn-group btn-group-justified">
              <a href="/deal_stages/<%= deal_stage.id %>" class="btn btn-primary">
                <i class="fa fa-search-plus"></i>
              </a>

              <a href="/deal_stages/<%= deal_stage.id %>/edit" class="btn btn-warning">
                <i class="fa fa-edit"></i>
              </a>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
</div>

<%= render('shared/quick_search_js') %>