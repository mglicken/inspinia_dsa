<br>
<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="ibox-content">
        <h3 class="ibox-title"> Subsidiary # <%= @subsidiary.id %></h3>
      <div class="ibox-body">
        <div class="row">
          <div class="col-md-12">
            <dl>

              <dt> Parent ID </dt>
              <dd><%= @subsidiary.parent_id %></dd>
              <dt> Child ID</dt>
              <dd><%= @subsidiary.child_id %></dd>          
              <dt> Acquisition Date</dt>
              <dd><%= @subsidiary.acquisition_date %></dd>
              <dt> Acquisition Price </dt>
              <dd><%= @subsidiary.acquisition_price %></dd>
              <dt> Link </dt>
              <dd><%= @subsidiary.link %></dd>

            </dl>
            <div class="btn-group btn-group-justified">
              <a href="/companies/<%= @subsidiary.parent_id %>" class="btn btn-primary">
                <i class="fa fa-reply"></i>
              </a>

              <a href="/subsidiaries/<%= @subsidiary.id %>/edit" class="btn btn-warning">
                <i class="fa fa-edit"></i>
              </a>

            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>
