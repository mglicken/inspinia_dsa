<%= render('shared/file_download_upload', path: "cip_slides") %>
<div class="page-header">
  <h1>
    CIP Slides
    <a href="/cip_slides/new" class="btn btn-lg btn-success"><i class="fa fa-plus"></i></a>
  </h1>
</div>

<!-- Responsive, Isotope-based layout example -->

<div class="row">
  <div class="col-xs-12">
    <input type="text" id="quicksearch" placeholder="Search CIPs (start typing)" class="form-control">
  </div>
</div>

<hr>

<div class="row isotope-container">
<% @cip_slides.each do |cip_slide| %>
  <div class="col-xs-11 col-sm-11 col-md-11 col-lg-11 isotope-item">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">CIP_Slide # <%= cip_slide.id %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <class="dl-horizontal">

              <dt> Slide ID</dt>
              <dd><%= cip_slide.slide_id %></dd>
              <dt> CIP ID</dt>
              <dd><%= cip_slide.cip_id %></dd>          

            </dl>
            <div class="btn-group btn-group-justified">
              <a href="/cip_slides/<%= cip_slide.id %>" class="btn btn-primary">
                <i class="fa fa-search-plus"></i>
              </a>

              <a href="/cip_slides/<%= cip_slide.id %>/edit" class="btn btn-warning">
                <i class="fa fa-edit"></i>
              </a>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
</div>

<%= render('shared/quick_search_js') %>