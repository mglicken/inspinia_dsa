
<div class="page-header">
  <h1>
    Work Histories
    <a href="/work_histories/new" class="btn btn-lg btn-success"><i class="fa fa-plus"></i></a>
  </h1>
</div>

<!-- Responsive, Isotope-based layout example -->

<div class="row">
  <div class="col-xs-12">
    <input type="text" id="quicksearch" placeholder="Search Work Histories (start typing)" class="form-control">
  </div>
</div>

<hr>

<div class="row isotope-container">
<% @work_histories.each do |work_history| %>
  <div class="col-xs-11 col-sm-11 col-md-11 col-lg-11 isotope-item">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Work History # <%= work_history.id %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <class="dl-horizontal">

              <dt> Person ID</dt>
              <dd><%= work_history.person_id %></dd>
              <dt> Company ID</dt>
              <dd><%= work_history.company_id %></dd>  
              <dt> Role ID</dt>
              <dd><%= work_history.role_id %></dd>
              <dt> Current</dt>
              <dd><%= work_history.current %></dd>
              <dt> Start Year</dt>
              <dd><%= work_history.start_year %></dd>
              <dt> End Year</dt>
              <dd><%= work_history.end_year %></dd>         

            </dl>
            <div class="btn-group btn-group-justified">
              <a href="/work_histories/<%= work_history.id %>" class="btn btn-primary">
                <i class="fa fa-search-plus"></i>
              </a>

              <a href="/work_histories/<%= work_history.id %>/edit" class="btn btn-warning">
                <i class="fa fa-edit"></i>
              </a>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
</div>

<%= render('shared/quick_search_js') %>