<style>
  .btn-lincoln { background-color: #006b6e;
                         color: #ffffff;  }
  .btn-lincoln:hover { background-color: #006b6e;
                       color: #ffffff; }
</style>

<!-- Responsive panel-->

<div class="row" style= "padding-top:20px;">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">

  </div>
</div>


<div class="row">
  <div class="col-xs-11 col-sm-11 col-md-11 col-lg-11 isotope-item">
    <div class="panel panel-default">
      <div class="pull-right" style="margin-right:25px">
          <% if @slide.favorite_slides.where(user_id: current_user.id).present? %>
            <a href="/destroy_favorite_slide/<%=@slide.favorite_slides.find_by(user_id: current_user.id).id %>" class="btn btn-lg btn-unfavorite" id="slide_<%=@slide.id%>"><i class="fa fa-star"></i></a>
          <% else %>
            <a href="/create_favorite_slide/<%=current_user.id%>/<%=@slide.id%>" class="btn btn-lg btn-favorite" id="slide_<%=@slide.id%>"><i class="fa fa-star-o"></i></a>
          <% end %>
      </div>  
      <div class="panel-heading">
        <% if @nbp.present? %> 
          <h3 class="panel-title"><a href="/nbps/<%=@nbp.id%>"><%= @nbp.deal.name %> NBP</a> (Slide# <%= @slide.number %>)</h3>
        <% end %>
        <% if @cip.present? %> 
          <h3 class="panel-title"><a href="/cips/<%=@cip.id%>"><%= @cip.deal.name %> CIP</a> (Slide# <%= @slide.number %>)</h3>
        <% end %>
        <% if @mp.present? %> 
          <h3 class="panel-title"><a href="/mps/<%=@mp.id%>"><%= @mp.deal.name %> MP</a> (Slide# <%= @slide.number %>)</h3>
        <% end %>
        <% if @teaser.present? %> 
          <h3 class="panel-title"><a href="/teasers/<%=@teaser.id%>"><%= @teaser.deal.name %> Teaser</a> (Slide# <%= @slide.number %>)</h3>
        <% end %>        
        <% if @case_study.present? %> 
          <h3 class="panel-title"><a href="/case_studies/<%=@case_study.id%>"><%= @case_study.deal.name %> Case Study</a> (Slide# <%= @slide.number %>)</h3>
        <% end %>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">
            <% if @slide.nbp.present? %>   
              <iframe src= "http://res.cloudinary.com/mglicken/image/upload/w_1100,h_850,pg_<%= @slide.number %>/<%= @slide.nbp.image_id %>.pdf" style= "width:100%; height:750px;" frameborder="0"> </iframe>  
            <% end %>
            <% if @slide.cip.present? %> 
              <iframe src= "http://res.cloudinary.com/mglicken/image/upload/w_1100,h_850,pg_<%= @slide.number %>/<%= @slide.cip.image_id %>.pdf" style= "width:100%; height:750px;" frameborder="0"> </iframe>  
            <% end %>
            <% if @slide.mp.present? %> 
              <iframe src= "http://res.cloudinary.com/mglicken/image/upload/w_1100,h_850,pg_pg_<%= @slide.number %>/<%= @slide.mp.image_id %>.pdf" style= "width:100%; height:750px;" frameborder="0"> </iframe>  
            <% end %>
            <% if @slide.teaser.present? %> 
              <iframe src= "http://res.cloudinary.com/mglicken/image/upload/w_850,h_1100,pg_<%= @slide.number %>/<%= @slide.teaser.image_id %>.pdf" style= "width:100%; height:960px;" frameborder="0"> </iframe>  
            <% end %>
            <% if @slide.case_study.present? %> 
              <iframe src= "http://res.cloudinary.com/mglicken/image/upload/w_1100,h_850,pg_<%= @slide.number %>/<%= @slide.case_study.image_id %>.pdf" style= "width:100%; height:750px;" frameborder="0"> </iframe>  
            <% end %>
            </dl>
            <div class="btn-group btn-group-justified">
              <% if @slide.number > 1 %>
                <a href="/slides/<%= (@slide.id - 1) %>" class="btn btn-lincoln">
                  <i class="fa fa-chevron-left"></i>
                </a>
              <% end %>
              <% if @slide.number < Slide.find(@slide.id+1).number %>
                <a href="/slides/<%= @slide.id + 1%>" class="btn btn-lincoln">
                  <i class="fa fa-chevron-right"></i>
                </a>
              <% end %>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%= render('view_tags') %>
<br>
<br>

<%= render('shared/quick_search_js') %>
<!-- End responsive panel example -->
