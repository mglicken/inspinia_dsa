<!-- Validation failure messages -->

<% if @nbp_slide.errors.any? %>
  <% @nbp_slide.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Add Slide</h3>
      </div>
      <div class="panel-body">
        <form action="/create_nbp_slide" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">


          <!-- Label and input for Deal Name -->
          <div class="form-group">
            <label for="name" class="col-sm-2 control-label">
              Deal
            </label>
            <div class="col-sm-10">
              <
              <%= select_tag :deal_id, options_from_collection_for_select(Deal.all, :id, :name, @slide.deal_id), :class => "form-control" %>
            </div>
          </div>
          <!-- Label and input for nbp_id -->
          <input name="nbp_id" type="hidden" value="<%= @nbp_slide.nbp_id %>" >
          <!-- Label and input for Slide Number -->
          <div class="form-group">
            <label for="number" class="col-sm-2 control-label">
              NBP Slide #
            </label>
            <div class="col-sm-10">
              <input type="integer" id="number" name="number" placeholder="e.g., 17" class="form-control" value="<%= @nbp_slide.number %>">
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-success">
                Create NBP Slide
              </button>
              or
              <a href="/nbp_slides">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
