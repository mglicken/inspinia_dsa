<!-- Validation failure messages -->

<% if @mp_sponsor.errors.any? %>
  <% @mp_sponsor.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
  
      <div class="panel-heading">
        <h3 class="panel-title">Edit MP Sponsor</h3>
      </div>
      <div class="panel-body">
        <form action="/update_mp_sponsor/<%= @mp_sponsor.id %>" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for MP ID -->
          <div class="form-group">
            <label for="mp_id" class="col-sm-2 control-label">
              MP ID
            </label>
            <div class="col-sm-10">
              <input type="integer" id="mp_id" name="mp_id" placeholder="e.g., 17" class="form-control" value="<%= @mp_sponsor.mp_id %>">
            </div>
          </div>
          <!-- Label and input for Sponsor ID -->
          <div class="form-group">
            <label for="sponsor_id" class="col-sm-2 control-label">
              Sponsor ID
            </label>
            <div class="col-sm-10">
              <input type="integer" id="sponsor_id" name="sponsor_id" placeholder="e.g., 17" class="form-control" value="<%= @mp_sponsor.sponsor_id %>">
            </div>
          </div>
          <!-- Label and input for LOI ID -->
          <div class="form-group">
            <label for="loi_id" class="col-sm-2 control-label">
              LOI ID
            </label>
            <div class="col-sm-10">
              <input type="integer" id="loi_id" name="loi_id" placeholder="e.g., 17" class="form-control" value="<%= @mp_sponsor.loi_id %>">
            </div>
          </div>
          <!-- Label and input for Declined -->
          <div class="form-group">
            <label for="declined" class="col-sm-2 control-label">
              Declined
            </label>
            <div class="col-sm-10">
              <input type="boolean" id="declined" name="declined" placeholder="e.g., 17" class="form-control" value="<%= @mp_sponsor.declined %>">
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-warning">
                Update MP Sponsor
              </button>
              or
              <a href="/mp_sponsors/<%= @mp_sponsor.id %>">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>


<!-- End responsive panel example -->
