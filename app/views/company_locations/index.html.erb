
<div class="page-header">
  <h1>
    Company Locations
    <a href="/company_locations/new" class="btn btn-lg btn-success"><i class="fa fa-plus"></i></a>
  </h1>
</div>

<!-- Responsive, Isotope-based layout example -->

<div class="row">
  <div class="col-xs-12">
    <input type="text" id="quicksearch" placeholder="Search companys (start typing)" class="form-control">
  </div>
</div>

<hr>

<div class="row isotope-container">
<% @company_locations.each do |company_location| %>
  <div class="col-xs-11 col-sm-11 col-md-11 col-lg-11 isotope-item">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Company Location # <%= company_location.id %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <class="dl-horizontal">

              <dt> Location ID</dt>
              <dd><%= company_location.location_id %></dd>
              <dt> Company ID</dt>
              <dd><%= company_location.company_id %></dd>          

            </dl>
            <div class="btn-group btn-group-justified">
              <a href="/company_locations/<%= company_location.id %>" class="btn btn-primary">
                <i class="fa fa-search-plus"></i>
              </a>

              <a href="/company_locations/<%= company_location.id %>/edit" class="btn btn-warning">
                <i class="fa fa-edit"></i>
              </a>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
</div>

<%= render('shared/quick_search_js') %>