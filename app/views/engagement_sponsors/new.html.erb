<!-- Validation failure messages -->

<% if @engagement_sponsor.errors.any? %>
  <% @engagement_sponsor.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Add Engagement Sponsor</h3>
      </div>
      <div class="panel-body">
        <form action="/create_engagement_sponsor" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">


          <!-- Label and input for Sponsor ID -->
          <div class="form-group">
            <label for="sponsor_id" class="col-sm-2 control-label">
              Sponsor ID
            </label>
            <div class="col-sm-10">
              <input type="integer" id="sponsor_id" name="sponsor_id" placeholder="e.g., 17" class="form-control" value="<%= @engagement_sponsor.sponsor_id %>">
            </div>
          </div>

          <!-- Label and input for Deal ID -->
          <div class="form-group">
            <label for="deal_id" class="col-sm-2 control-label">
              Deal ID
            </label>
            <div class="col-sm-10">
              <input type="integer" id="deal_id" name="deal_id" placeholder="e.g., 17" class="form-control" value="<%= @engagement_sponsor.deal_id %>">
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-success">
                Create Engagement Sponsor
              </button>
              or
              <a href="/engagement_sponsors">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
