
<div class="page-header">
  <h1>
    MP Companies
    <a href="/mp_companies/new" class="btn btn-lg btn-success"><i class="fa fa-plus"></i></a>
  </h1>
</div>

<!-- Responsive, Isotope-based layout example -->

<div class="row">
  <div class="col-xs-12">
    <input type="text" id="quicksearch" placeholder="Search MP Companies (start typing)" class="form-control">
  </div>
</div>

<hr>

<div class="row isotope-container">
<% @mp_companies.each do |mp_company| %>
  <div class="col-xs-11 col-sm-11 col-md-11 col-lg-11 isotope-item">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">mp_company # <%= mp_company.id %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <class="dl-horizontal">

              <dt> MP ID</dt>
              <dd><%= mp_company.mp_id %></dd> 
              <dt> Company ID</dt>
              <dd><%= mp_company.company_id %></dd>
              <dt> LOI ID</dt>
              <dd><%= mp_company.loi_id %></dd>         

            </dl>
            <div class="btn-group btn-group-justified">
              <a href="/mp_companies/<%= mp_company.id %>" class="btn btn-primary">
                <i class="fa fa-search-plus"></i>
              </a>

              <a href="/mp_companies/<%= mp_company.id %>/edit" class="btn btn-warning">
                <i class="fa fa-edit"></i>
              </a>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
</div>

<%= render('shared/quick_search_js') %>