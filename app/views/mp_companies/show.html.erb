<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"> MP Company # <%= @mp_company.id %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl>

              <dt> MP ID</dt>
              <dd><%= @mp_company.mp_id %></dd>  
              <dt> Company ID</dt>
              <dd><%= @mp_company.company_id %></dd>
              <dt> LOI ID</dt>
              <dd><%= @mp_company.loi_id %></dd>

            </dl>
            <div class="btn-group btn-group-justified">
              <a href="/seasers/<%= @mp_company.mp_id %>" class="btn btn-primary">
                <i class="fa fa-reply"></i>
              </a>

              <a href="/mp_companies/<%= @mp_company.id %>/edit" class="btn btn-warning">
                <i class="fa fa-edit"></i>
              </a>

            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>

<!-- End responsive panel example -->
