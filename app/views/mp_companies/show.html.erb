<br>
<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="ibox-content">
        <h3 class="ibox-title"> MP Company # <%= @mp_company.id %></h3>
      <div class="ibox-body">
        <div class="row">
          <div class="col-md-12">
            <dl>

              <dt> MP ID</dt>
              <dd><%= @mp_company.mp_id %></dd>  
              <dt> Company ID</dt>
              <dd><%= @mp_company.company_id %></dd>
              <dt> MP Date</dt>
              <dd><%= @mp_company.mp_date %></dd>
              <dt> LOI ID</dt>
              <dd><%= @mp_company.loi_id %></dd>

            </dl>
            <div class="btn-group btn-group-justified">
              <a href="/seasers/<%= @mp_company.mp_id %>" class="btn btn-primary">
                <i class="fa fa-reply"></i>
              </a>
              <a href="/mp_companies/<%= @mp_company.id %>/edit" class="btn btn-warning">
                <i class="fa fa-edit"></i>
              </a>
              <% if current_user.access_id < 3 %>
                <%= render('shared/delete_mp_company_modal', :mp_company => @mp_company)%>
              <% end %>

            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>

