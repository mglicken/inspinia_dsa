<!-- Validation failure messages -->

<% if @nbp_sponsor.errors.any? %>
  <% @nbp_sponsor.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Add NBP Sponsor</h3>
      </div>
      <div class="panel-body">
        <form action="/create_nbp_sponsor" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">


          <!-- Label and input for Sponsor ID -->
          <div class="form-group">
            <label for="sponsor_id" class="col-sm-2 control-label">
              Sponsor ID
            </label>
            <div class="col-sm-10">
              <%= select_tag :sponsor_id, options_from_collection_for_select(Sponsor.all, :id, :name, @nbp_sponsor.sponsor_id), :class => "form-control" %>
            </div>
          </div>

          <!-- Label and input for NBP ID -->
          <div class="form-group">
            <label for="nbp_id" class="col-sm-2 control-label">
              NBP ID
            </label>
            <div class="col-sm-10">
              <input type="integer" id="nbp_id" name="nbp_id" placeholder="e.g., 17" class="form-control" value="<%= @nbp_sponsor.nbp_id %>">
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-success">
                Create NBP Sponsor
              </button>
              or
              <a href="/nbp_sponsors">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
