<!-- Responsive panel-->
<br>
<div class="row">
  <div class="col-lg-offset-2 col-lg-7">
    <div class="panel panel-default">
      <div class="panel-heading">
        <% if @qofe.slides.empty? %>
          <a href="#" class="btn btn-lincoln pull-right" text-align="center" id="upload_widget_opener">Upload QofE PDF</a>
        <% end %> 
        <h3 class="panel-title" style="font-size:28px"><%= @qofe.name %></h3>

      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-lg-12">
            <dl class="dl-horizontal" style="font-size:10px">

             <dt>Deal</dt>
             <dd> <a href="/deals/<%= @qofe.deal_id %>"><%= @qofe.deal.name %></a></dd>
             <dt>Company</dt>
             <dd> <a href="/companies/<%= @qofe.deal.company.id %>"><%= @qofe.deal.company.name %></a></dd>
             <dt>Date</dt>
             <dd><%= @qofe.qofe_date %></dd>
             <dt>Tags</dt>
             <dd>
             <% @tags.each do |tag| %>
              <%= tag.name %>,
            <% end %>
             </dd>

            </dl>
            <div class="btn-group btn-group-justified">

              <%= render('shared/edit_qofe_modal', :qofe => @qofe)%>

            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>


<%= render('view_slides') %>

<%= render('shared/quick_search_js') %>

<% if @qofe.image_id.nil? %>
  <%= render('shared/upload_widget',url: "/create_qofe_slide/#{@qofe.id}", p_id: @p_id) %>
<% elsif @qofe.image_id. == "" %>
  <%= render('shared/upload_widget',url: "/create_qofe_slide/#{@qofe.id}", p_id: @p_id) %>
<% end %>

<!-- End responsive panel -->
