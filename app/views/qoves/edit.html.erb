<!-- Validation failure messages -->

<% if @qofe.errors.any? %>
  <% @qofe.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
  
      <div class="panel-heading">
        <h3 class="panel-title">Edit <%= @qofe.deal.name %> QofE </h3>
      </div>
      <div class="panel-body">
        <form action="/update_qofe/<%= @qofe.id %>" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for name -->
          <div class="form-group">
            <h5><label for="name" class="col-sm-2 control-label">
              Name
            </label></h5>
            <div class="col-lg-10">
              <input type="string" id="name" name="name" placeholder="e.g., Packaging QofE " class="form-control">
            </div>
          </div>

          <!-- Label and input for Company Name -->
          <div class="form-group">
            <label for="name" class="col-sm-2 control-label">
              Deal
            </label>
            <div class="col-sm-10">
              <%= select_tag :deal_id, options_from_collection_for_select(Deal.all, :id, :name, @qofe.deal_id), :class => "form-control" %>
            </div>
          </div>

          <!-- Label and input for Date -->
          <div class="form-group">
            <h5><label for="qofe_date" class="col-sm-2 control-label">
              Date
            </label></h5>
            <div class="col-lg-10">
              <input type="date" id="qofe_date" name="qofe_date" placeholder="12/17/2017" class="form-control" value="<%= @qofe.qofe_date %>"
            </div>
          </div>

          <!-- Label and input for Image ID -->
          <div class="form-group">
            <h5><label for="image_id" class="col-sm-2 control-label">
              Image ID
            </label></h5>
            <div class="col-lg-10">
              <input type="string" id="image_id" name="image_id" placeholder="12/17/2017" class="form-control" value="<%= @qofe.image_id %>"
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-warning">
                Update QofE 
              </button>
              or
              <a href="/qoves/<%= @qofe.id %>">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>


<!-- End responsive panel example -->
